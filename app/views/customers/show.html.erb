<% content_for :title, @customer.name %>
<% content_for :breadcrumbs do %>
  <li><%= link_to "Dashboard", root_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li><%= link_to "Customers", customers_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li aria-current="page" class="text-muted"><%= @customer.name %></li>
<% end %>

<div class="mx-auto max-w-2xl">
  <%= render "shared/page_header", title: @customer.name, description: "Customer details and contact info." do %>
    <div class="flex items-center gap-2">
      <%= link_to "Back to customers", customers_path, class: "inline-flex min-h-[44px] items-center justify-center rounded-lg border border-theme bg-surface px-4 py-3 text-base font-semibold text-body hover:bg-[var(--color-border)]/30", data: { turbo_prefetch: true } %>
      <% if can? :update, @customer %>
        <%= link_to "Edit", edit_customer_path(@customer),
            class: "inline-flex min-h-[44px] items-center justify-center rounded-lg bg-accent px-4 py-3 text-base font-semibold text-[color:var(--color-page)] shadow-sm hover:bg-[var(--color-accent-hover)]",
            data: { turbo_prefetch: true } %>
      <% end %>
    </div>
  <% end %>

  <section class="mt-6 overflow-hidden rounded-xl border border-theme bg-surface shadow-sm" aria-labelledby="customer-contact-heading">
    <div class="border-b border-theme bg-[var(--color-border)]/20 px-6 py-3">
      <h2 id="customer-contact-heading" class="text-base font-semibold text-body">Contact</h2>
      <p class="mt-0.5 text-sm text-muted">Name, member number, phone, and email</p>
    </div>
    <dl class="divide-y divide-[var(--color-border)]">
      <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-muted">Name</dt>
        <dd class="mt-1 text-base text-body sm:col-span-2 sm:mt-0"><%= @customer.name %></dd>
      </div>
      <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-muted">Member number</dt>
        <dd class="mt-1 text-base text-body sm:col-span-2 sm:mt-0"><%= @customer.member_number.presence || "—" %></dd>
      </div>
      <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-muted">Phone</dt>
        <dd class="mt-1 text-base text-body sm:col-span-2 sm:mt-0"><%= @customer.phone.presence || "—" %></dd>
      </div>
      <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-muted">Email</dt>
        <dd class="mt-1 text-base text-body sm:col-span-2 sm:mt-0"><%= @customer.email.presence || "—" %></dd>
      </div>
      <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-muted">Status</dt>
        <dd class="mt-1 text-base text-body sm:col-span-2 sm:mt-0"><%= @customer.active? ? "Active" : "Inactive" %></dd>
      </div>
    </dl>
  </section>

  <% if @customer.address.present? %>
    <section class="mt-6 overflow-hidden rounded-xl border border-theme bg-surface shadow-sm" aria-labelledby="customer-address-heading">
      <div class="border-b border-theme bg-[var(--color-border)]/20 px-6 py-3">
        <h2 id="customer-address-heading" class="text-base font-semibold text-body">Address</h2>
      </div>
      <dl class="divide-y divide-[var(--color-border)]">
        <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-muted">Address</dt>
          <dd class="mt-1 text-base text-body sm:col-span-2 sm:mt-0"><%= @customer.address %></dd>
        </div>
      </dl>
    </section>
  <% end %>

  <% if @customer.notes.present? || @customer.alert.present? || @customer.joining_date.present? || @customer.date_of_birth.present? %>
    <section class="mt-6 overflow-hidden rounded-xl border border-theme bg-surface shadow-sm" aria-labelledby="customer-notes-heading">
      <div class="border-b border-theme bg-[var(--color-border)]/20 px-6 py-3">
        <h2 id="customer-notes-heading" class="text-base font-semibold text-body">Notes & alerts</h2>
      </div>
      <dl class="divide-y divide-[var(--color-border)]">
        <% if @customer.notes.present? %>
          <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
            <dt class="text-sm font-medium text-muted">Notes</dt>
            <dd class="mt-1 text-base text-body sm:col-span-2 sm:mt-0"><%= simple_format(@customer.notes) %></dd>
          </div>
        <% end %>
        <% if @customer.alert.present? %>
          <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
            <dt class="text-sm font-medium text-muted">Alert</dt>
            <dd class="mt-1 text-base text-body sm:col-span-2 sm:mt-0"><%= simple_format(@customer.alert) %></dd>
          </div>
        <% end %>
        <% if @customer.joining_date.present? %>
          <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
            <dt class="text-sm font-medium text-muted">Joining date</dt>
            <dd class="mt-1 text-base text-body sm:col-span-2 sm:mt-0"><%= l(@customer.joining_date, format: :long) %></dd>
          </div>
        <% end %>
        <% if @customer.date_of_birth.present? %>
          <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
            <dt class="text-sm font-medium text-muted">Date of birth</dt>
            <dd class="mt-1 text-base text-body sm:col-span-2 sm:mt-0"><%= l(@customer.date_of_birth, format: :long) %></dd>
          </div>
        <% end %>
      </dl>
    </section>
  <% end %>

  <section class="mt-6 overflow-hidden rounded-xl border border-theme bg-surface shadow-sm" aria-labelledby="customer-meta-heading">
    <div class="border-b border-theme bg-[var(--color-border)]/20 px-6 py-3">
      <h2 id="customer-meta-heading" class="text-base font-semibold text-body">Record info</h2>
      <p class="mt-0.5 text-sm text-muted">Timestamps</p>
    </div>
    <dl class="divide-y divide-[var(--color-border)]">
      <% if @customer.added_by.present? %>
        <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-muted">Added by</dt>
          <dd class="mt-1 text-base text-body sm:col-span-2 sm:mt-0"><%= @customer.added_by.email_address %></dd>
        </div>
      <% end %>
      <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-muted">Created</dt>
        <dd class="mt-1 text-base text-body sm:col-span-2 sm:mt-0"><%= local_time(@customer.created_at, format: :long) %></dd>
      </div>
      <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-muted">Last updated</dt>
        <dd class="mt-1 text-base text-body sm:col-span-2 sm:mt-0"><%= local_time(@customer.updated_at, format: :long) %></dd>
      </div>
    </dl>
  </section>

  <%= render "shared/audit_trail", auditable: @customer %>
</div>
