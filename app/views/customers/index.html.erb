<% content_for :title, "Customers" %>
<% content_for :breadcrumbs do %>
  <li><%= link_to "Dashboard", root_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li aria-current="page" class="text-muted">Customers</li>
<% end %>

<div class="mx-auto max-w-5xl">
  <%= render "shared/page_header", title: "Customers" do %>
    <% if can? :create, Customer %>
      <%= link_to "Add customer", new_customer_path,
          class: "inline-flex min-h-[44px] items-center justify-center rounded-lg bg-accent px-4 py-3 text-base font-semibold text-[color:var(--color-page)] shadow-sm hover:bg-[var(--color-accent-hover)]",
          data: { turbo_prefetch: true } %>
    <% end %>
  <% end %>

  <div class="mt-6 flex flex-col gap-4">
    <%= render "shared/table_filters",
        search_path: customers_path,
        turbo_frame: "customers_table",
        label: "Search customers",
        placeholder: "Search customers…",
        filter_params: %w[q filter] do |f| %>
      <label for="customers_table_filter" class="sr-only">Status</label>
      <%= f.select :filter,
          [
            [ "All", "" ],
            [ "Active", "active" ],
            [ "Inactive", "inactive" ]
          ],
          { selected: params[:filter] },
          {
            id: "customers_table_filter",
            class: "input-field min-h-[44px] w-40 cursor-pointer",
            data: { action: "change->table-search#handleChange" }
          } %>
    <% end %>

    <%= turbo_frame_tag "customers_table" do %>
      <div class="overflow-x-auto rounded-lg border border-theme bg-surface">
        <table class="min-w-full divide-y divide-[var(--color-border)]">
          <thead class="bg-[var(--color-border)]/30">
            <tr>
              <th class="px-4 py-3 text-left text-base font-medium uppercase tracking-wider text-muted">Customer</th>
              <th class="px-4 py-3 text-left text-base font-medium uppercase tracking-wider text-muted">Member #</th>
              <th class="px-4 py-3 text-left text-base font-medium uppercase tracking-wider text-muted">Contact</th>
              <th class="px-4 py-3 text-left text-base font-medium uppercase tracking-wider text-muted">Status</th>
              <th class="px-4 py-3 text-left text-base font-medium uppercase tracking-wider text-muted">Created</th>
              <th class="px-4 py-3 text-right text-base font-medium uppercase tracking-wider text-muted"></th>
            </tr>
          </thead>
          <tbody class="divide-y divide-[var(--color-border)] bg-surface">
            <% @customers.each do |customer| %>
              <tr>
                <td class="px-4 py-3 text-base font-medium text-body">
                  <% if can? :read, customer %>
                    <%= link_to customer.name, customer_path(customer), class: "text-accent hover:underline", data: { turbo_frame: "_top", turbo_prefetch: true } %>
                  <% else %>
                    <%= customer.name %>
                  <% end %>
                </td>
                <td class="px-4 py-3 text-base text-body"><%= customer.member_number.presence || "—" %></td>
                <td class="px-4 py-3 text-base text-body"><%= customer.phone.presence || customer.email.presence || "—" %></td>
                <td class="px-4 py-3 text-base text-body"><%= customer.active? ? "Active" : "Inactive" %></td>
                <td class="px-4 py-3 text-base text-body text-muted"><%= l(customer.created_at, format: :short) %></td>
                <td class="px-4 py-3 text-right text-base">
                  <% if can? :update, customer %>
                    <%= link_to "Edit", edit_customer_path(customer),
                        class: "inline-flex items-center px-3 py-2 font-medium text-accent hover:opacity-80 rounded",
                        data: { turbo_frame: "_top", turbo_prefetch: true } %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <% if @customers.empty? %>
        <p class="mt-4 text-base text-muted">No customers yet. Add one to get started.</p>
      <% end %>

      <%= render "shared/pagy_nav" %>
    <% end %>
  </div>
</div>
