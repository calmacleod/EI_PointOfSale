<% content_for :title, "Customers" %>
<% content_for :breadcrumbs do %>
  <li><%= link_to "Dashboard", root_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li aria-current="page" class="text-muted">Customers</li>
<% end %>

<div class="lg:flex lg:min-h-0 lg:flex-1 lg:flex-col">
  <%= render "shared/page_header", title: "Customers" do %>
    <% if can? :create, Customer %>
      <%= link_to "Add customer", new_customer_path,
          class: "inline-flex min-h-[30px] items-center justify-center bg-accent px-2.5 py-1 text-sm font-semibold text-[color:var(--color-page)] hover:bg-[var(--color-accent-hover)]",
          data: { turbo_prefetch: true } %>
    <% end %>
  <% end %>

  <div class="mt-2 flex flex-col gap-2 lg:min-h-0 lg:flex-1">
    <%= render "shared/table_filters",
        search_path: customers_path,
        turbo_frame: "customers_table",
        label: "Search customers",
        placeholder: "Search customers…",
        filter_params: %w[q filter] do |f| %>
      <label for="customers_table_filter" class="sr-only">Status</label>
      <%= f.select :filter,
          [
            [ "All", "" ],
            [ "Active", "active" ],
            [ "Inactive", "inactive" ]
          ],
          { selected: params[:filter] },
          {
            id: "customers_table_filter",
            class: "input-field min-h-[30px] w-36 cursor-pointer text-sm",
            data: { action: "change->table-search#handleChange" }
          } %>
    <% end %>

    <%= turbo_frame_tag "customers_table", class: "lg:flex lg:min-h-0 lg:flex-1 lg:flex-col" do %>
      <div class="overflow-x-auto border border-theme bg-surface lg:flex-1 lg:overflow-y-auto">
        <table class="min-w-full divide-y divide-[var(--color-border)]">
          <thead class="bg-surface-alt lg:sticky lg:top-0 lg:z-10">
            <tr>
              <th class="px-3 py-1 text-left text-xs font-medium uppercase tracking-wider text-muted"><%= sort_link "Customer", :name %></th>
              <th class="px-3 py-1 text-left text-xs font-medium uppercase tracking-wider text-muted"><%= sort_link "Member #", :member_number %></th>
              <th class="px-3 py-1 text-left text-xs font-medium uppercase tracking-wider text-muted">Contact</th>
              <th class="px-3 py-1 text-left text-xs font-medium uppercase tracking-wider text-muted"><%= sort_link "Status", :active %></th>
              <th class="px-3 py-1 text-left text-xs font-medium uppercase tracking-wider text-muted"><%= sort_link "Created", :created_at %></th>
              <th class="px-3 py-1 text-right text-xs font-medium uppercase tracking-wider text-muted"></th>
            </tr>
          </thead>
          <tbody class="divide-y divide-[var(--color-border)] bg-surface">
            <% @customers.each do |customer| %>
              <tr>
                <td class="px-3 py-1.5 text-sm font-medium text-body">
                  <% if can? :read, customer %>
                    <%= link_to customer.name, customer_path(customer), class: "text-accent hover:underline", data: { turbo_frame: "_top", turbo_prefetch: true } %>
                  <% else %>
                    <%= customer.name %>
                  <% end %>
                </td>
                <td class="px-3 py-1.5 text-sm text-body"><%= customer.member_number.presence || "—" %></td>
                <td class="px-3 py-1.5 text-sm text-body"><%= customer.phone.presence || customer.email.presence || "—" %></td>
                <td class="px-3 py-1.5 text-sm text-body"><%= customer.active? ? "Active" : "Inactive" %></td>
                <td class="px-3 py-1.5 text-sm text-muted"><%= local_time(customer.created_at, format: :short) %></td>
                <td class="px-3 py-1.5 text-right text-sm">
                  <% if can? :update, customer %>
                    <%= link_to "Edit", edit_customer_path(customer),
                        class: "font-medium text-accent hover:opacity-80",
                        data: { turbo_frame: "_top", turbo_prefetch: true } %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <% if @customers.empty? %>
        <p class="mt-2 text-sm text-muted">No customers yet. Add one to get started.</p>
      <% end %>

      <%= render "shared/pagy_nav" %>
    <% end %>
  </div>
</div>
