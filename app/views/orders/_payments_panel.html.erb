<div id="order_payments_panel" class="border-b border-theme p-4">
  <h3 class="text-xs font-semibold uppercase tracking-wider text-muted mb-2">Payments</h3>

  <% order.order_payments.each do |payment| %>
    <div class="flex items-center justify-between rounded-md border border-theme bg-surface px-3 py-1.5 mb-1.5 text-xs">
      <div>
        <span class="font-medium text-body"><%= payment.display_method %></span>
        <% if payment.reference.present? %>
          <span class="text-muted">(ref: <%= payment.reference %>)</span>
        <% end %>
        <% if payment.cash? && payment.amount_tendered.present? %>
          <div class="text-[10px] text-muted mt-0.5">
            Tendered: <%= number_to_currency(payment.amount_tendered) %> |
            Change: <%= number_to_currency(payment.change_given || 0) %>
          </div>
        <% end %>
      </div>
      <div class="flex items-center gap-2">
        <span class="font-medium text-body"><%= number_to_currency(payment.amount) %></span>
        <% if order.draft? %>
          <%= button_to order_payment_path(payment), method: :delete, class: "text-muted hover:text-red-500", data: { turbo_stream: true } do %>
            <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if local_assigns[:payment_error].present? %>
    <div class="mb-2 rounded-md bg-red-50 border border-red-200 px-3 py-2 text-xs text-red-700">
      <%= payment_error %>
    </div>
  <% end %>

  <% if order.draft? && order.order_lines.any? %>
    <div class="mt-3 pt-3 border-t border-theme"
         data-controller="payment-form"
         data-payment-form-remaining-value="<%= order.amount_remaining %>"
         data-payment-form-gc-lookup-url-value="<%= gift_certificate_lookup_path %>">
      <h4 class="text-xs font-medium text-muted mb-2">Add Payment</h4>

      <%= form_with url: order_order_payments_path(order), class: "space-y-2", data: { turbo_stream: true, action: "submit->payment-form#validateBeforeSubmit" } do |f| %>
        <input type="hidden" name="order_payment[payment_method]" value="<%= OrderPayment.payment_methods.keys.first %>"
               data-payment-form-target="methodInput">

        <%# Payment method buttons %>
        <div class="flex flex-wrap gap-1.5 mb-2" data-payment-form-target="methodButtons">
          <% OrderPayment.payment_methods.keys.each_with_index do |method, index| %>
            <button type="button"
                    class="rounded-md px-2.5 py-1.5 text-[11px] font-medium border transition flex-1 min-w-[60px]
                           <%= index == 0 ? 'bg-accent text-white border-accent' : 'bg-surface text-muted border-theme hover:bg-[var(--color-border)]' %>"
                    data-method="<%= method %>"
                    data-payment-form-target="methodButton"
                    data-action="click->payment-form#selectMethod">
              <%= method.humanize %>
            </button>
          <% end %>
        </div>

        <div class="flex gap-2">
          <input type="number" name="order_payment[amount]" step="0.01" min="0" autocomplete="off"
                 value="<%= order.amount_remaining %>"
                 class="input-field flex-1 text-xs"
                 placeholder="Amount"
                 data-payment-form-target="amountInput"
                 required>
        </div>

        <%# Cash tendered section (shown only for cash) %>
        <div data-payment-form-target="cashSection" class="hidden space-y-2">
          <input type="number" name="order_payment[amount_tendered]" step="0.01" min="0" autocomplete="off"
                 class="input-field w-full text-xs"
                 placeholder="Amount tendered"
                 data-payment-form-target="tenderedInput"
                 data-action="input->payment-form#calculateChange">
          <div class="flex justify-between rounded-md bg-surface px-3 py-1.5 text-xs">
            <span class="text-muted">Change due:</span>
            <span class="font-bold text-body" data-payment-form-target="changeDisplay">$0.00</span>
          </div>
        </div>

        <%# Gift certificate balance display (shown when GC code is found) %>
        <div data-payment-form-target="gcBalanceDisplay" class="hidden">
          <div class="flex justify-between rounded-md bg-green-50 border border-green-200 px-3 py-1.5 text-xs">
            <span class="text-green-700">Available balance:</span>
            <span class="font-bold text-green-700" data-payment-form-target="gcBalanceAmount"></span>
          </div>
        </div>

        <%# GC not found message %>
        <div data-payment-form-target="gcNotFound" class="hidden text-xs text-red-600 px-1">
          Gift certificate not found or not active.
        </div>

        <%# Reference / GC code field â€” one field, placeholder changes per method %>
        <input type="text" name="order_payment[reference]"
               placeholder="Reference (optional)"
               autocomplete="off"
               class="input-field w-full text-xs"
               data-payment-form-target="referenceInput"
               data-action="input->payment-form#onReferenceInput">

        <button type="submit" class="w-full rounded-md bg-accent px-3 py-1.5 text-xs font-medium text-white hover:bg-[var(--color-accent-hover)] transition">
          Record Payment
        </button>
      <% end %>

      <%# Modal for adjusting payment amount when tendered is less than amount %>
      <div data-payment-form-target="adjustModal" class="hidden fixed inset-0 z-50" role="dialog">
        <div class="fixed inset-0 bg-black/50" data-action="click->payment-form#closeAdjustModal"></div>
        <div class="fixed inset-0 flex items-center justify-center p-4" style="pointer-events: none;">
          <div class="w-full max-w-sm rounded-xl bg-surface shadow-2xl overflow-hidden" style="pointer-events: auto;">
            <div class="bg-amber-50 px-5 py-4 border-b border-amber-200">
              <div class="flex items-start gap-3">
                <div class="flex h-8 w-8 shrink-0 items-center justify-center rounded-full bg-amber-100">
                  <svg class="h-4 w-4 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/></svg>
                </div>
                <div>
                  <h3 class="text-sm font-semibold text-amber-900">Adjust Payment Amount?</h3>
                  <p class="mt-1 text-xs text-amber-700" data-payment-form-target="adjustModalMessage">
                    The amount tendered is less than the payment amount.
                  </p>
                </div>
              </div>
            </div>
            <div class="flex justify-end gap-2 bg-surface px-5 py-3">
              <button type="button"
                      data-action="click->payment-form#closeAdjustModal"
                      class="rounded-lg border border-theme px-3.5 py-1.5 text-xs font-medium text-body hover:bg-[var(--color-border)] transition">
                Cancel
              </button>
              <button type="button"
                      data-action="click->payment-form#confirmAdjustAmount"
                      class="rounded-lg bg-accent px-3.5 py-1.5 text-xs font-semibold text-white hover:bg-[var(--color-accent-hover)] transition">
                Adjust & Record
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
