<%= turbo_frame_tag "gift_cert_modal" do %>
  <div class="fixed inset-0 z-[80]" role="dialog">
    <div class="fixed inset-0 bg-black/50" onclick="document.getElementById('gift_cert_modal').innerHTML = ''"></div>
    <div class="fixed inset-0 flex items-start justify-center pt-[15vh]" style="pointer-events: none;">
      <div class="w-full max-w-sm rounded-xl bg-surface shadow-2xl overflow-hidden" style="pointer-events: auto;">
        <div class="flex items-center justify-between border-b border-theme px-5 py-3">
          <h3 class="text-sm font-semibold text-body">Sell Gift Certificate</h3>
          <button type="button"
                  class="text-muted hover:text-body transition"
                  onclick="document.getElementById('gift_cert_modal').innerHTML = ''">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>

        <%= form_with url: order_gift_certificates_path(order), scope: :gift_certificate, data: { turbo_stream: true } do |f| %>
          <div class="p-5 space-y-4">
            <% if gift_certificate.errors.any? %>
              <div class="rounded-md bg-red-50 border border-red-200 px-3 py-2 text-xs text-red-700">
                <%= gift_certificate.errors.full_messages.to_sentence %>
              </div>
            <% end %>

            <div>
              <label class="block text-xs font-medium text-muted mb-1">Amount</label>
              <%= f.number_field :initial_amount, step: 0.01, min: 0.01, autocomplete: "off",
                  class: "input-field w-full text-sm",
                  placeholder: "e.g. 50.00",
                  value: gift_certificate.initial_amount,
                  required: true %>
            </div>
          </div>

          <div class="flex justify-end gap-2 border-t border-theme px-5 py-3">
            <button type="button"
                    class="rounded-lg border border-theme px-3.5 py-1.5 text-xs font-medium text-body hover:bg-[var(--color-border)] transition"
                    onclick="document.getElementById('gift_cert_modal').innerHTML = ''">
              Cancel
            </button>
            <button type="submit"
                    class="rounded-lg bg-accent px-3.5 py-1.5 text-xs font-semibold text-white hover:bg-[var(--color-accent-hover)] transition">
              Add to Order
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
