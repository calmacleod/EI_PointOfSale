<% content_for :title, "Close Register" %>

<% content_for :breadcrumbs do %>
  <li><%= link_to "Dashboard", root_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li><%= link_to "Cash Drawer", cash_drawer_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li aria-current="page" class="text-muted">Close Register</li>
<% end %>

<div class="mx-auto max-w-2xl">
  <%= render "shared/page_header", title: "Close Register", description: "Count the cash in the drawer to close out your session." %>

  <%# Show opening info for reference %>
  <div class="mt-2 rounded-lg border border-theme bg-surface p-3">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-xs font-medium text-muted">Opening float</p>
        <p class="text-lg font-semibold text-body"><%= number_to_currency(@session.opening_total) %></p>
      </div>
      <div class="text-right">
        <p class="text-xs text-muted">
          Opened by <strong class="text-body"><%= @session.opened_by.name.presence || @session.opened_by.email_address %></strong>
        </p>
        <p class="text-xs text-muted"><%= local_time(@session.opened_at, format: :short) %></p>
      </div>
    </div>
  </div>

  <% if @session.errors.any? %>
    <div class="mt-2 rounded-lg border border-[var(--color-error-border)] bg-[var(--color-error-bg)] px-3 py-2">
      <p class="text-sm font-semibold text-[var(--color-error-text)]">Please fix the following:</p>
      <ul class="mt-1 list-disc space-y-0.5 pl-5 text-sm text-[var(--color-error-text)]">
        <% @session.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with url: close_cash_drawer_path, method: :post, class: "mt-3" do %>
    <%= render "denomination_form", action_path: close_cash_drawer_path, submit_label: "Close Register", existing_counts: {} %>

    <div class="mt-3 flex items-center justify-end gap-2">
      <%= link_to "Cancel", cash_drawer_path,
          class: "inline-flex min-h-[30px] items-center justify-center rounded-md border border-theme bg-surface px-2.5 py-1 text-sm font-medium text-body hover:bg-[var(--color-border)]/30" %>
      <button type="submit"
              class="inline-flex min-h-[30px] items-center justify-center rounded-md bg-red-600 px-3 py-1.5 text-sm font-semibold text-white hover:bg-red-700">
        Close Register
      </button>
    </div>
  <% end %>
</div>
