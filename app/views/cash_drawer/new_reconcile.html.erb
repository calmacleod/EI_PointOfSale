<% content_for :title, "Reconcile Terminal" %>

<% content_for :breadcrumbs do %>
  <li><%= link_to "Dashboard", root_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li><%= link_to "Cash Drawer", cash_drawer_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li aria-current="page" class="text-muted">Reconcile Terminal</li>
<% end %>

<div class="mx-auto max-w-2xl">
  <%= render "shared/page_header", title: "Reconcile Terminal",
      description: "Enter the settlement totals printed by the debit/credit machine." %>

  <%# Session reference %>
  <div class="mt-2 rounded-lg border border-theme bg-surface p-3">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-xs font-medium text-muted">Session closed</p>
        <p class="text-sm font-semibold text-body"><%= local_time(@session.closed_at, format: :short) %></p>
      </div>
      <div class="text-right">
        <p class="text-xs font-medium text-muted">Closed by</p>
        <p class="text-sm font-semibold text-body"><%= @session.closed_by.name.presence || @session.closed_by.email_address %></p>
      </div>
    </div>
  </div>

  <% if @reconciliation.errors.any? %>
    <div class="mt-2 rounded-lg border border-[var(--color-error-border)] bg-[var(--color-error-bg)] px-3 py-2">
      <p class="text-sm font-semibold text-[var(--color-error-text)]">Please fix the following:</p>
      <ul class="mt-1 list-disc space-y-0.5 pl-5 text-sm text-[var(--color-error-text)]">
        <% @reconciliation.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with url: reconcile_cash_drawer_path, method: :post, class: "mt-3",
      data: {
        controller: "terminal-reconciliation",
        terminal_reconciliation_expected_debit_value: @reconciliation.expected_debit_total.to_f,
        terminal_reconciliation_expected_credit_value: @reconciliation.expected_credit_total.to_f
      } do |f| %>

    <div class="space-y-3">
      <%# Debit row %>
      <div class="rounded-lg border border-theme bg-surface p-3">
        <div class="grid grid-cols-3 items-center gap-3">
          <div>
            <p class="text-xs font-medium text-muted">Expected (POS)</p>
            <p class="mt-0.5 text-base font-semibold text-body tabular-nums">
              <%= number_to_currency(@reconciliation.expected_debit_total) %>
            </p>
            <p class="text-xs text-muted">Debit</p>
          </div>
          <div>
            <label for="debit_total" class="block text-xs font-medium text-muted">Terminal total</label>
            <%= f.number_field :debit_total,
                id: "debit_total",
                value: @reconciliation.debit_total,
                step: "0.01",
                min: "0",
                placeholder: "0.00",
                class: "mt-0.5 block w-full rounded-md border border-theme bg-surface px-2.5 py-1.5 text-sm text-body focus:border-accent focus:outline-none focus:ring-1 focus:ring-accent tabular-nums",
                data: {
                  terminal_reconciliation_target: "debitInput",
                  action: "input->terminal-reconciliation#calculate"
                } %>
          </div>
          <div class="text-right">
            <p class="text-xs font-medium text-muted">Discrepancy</p>
            <p class="mt-0.5 text-base font-semibold tabular-nums"
               data-terminal-reconciliation-target="debitDiscrepancy">—</p>
          </div>
        </div>
      </div>

      <%# Credit row %>
      <div class="rounded-lg border border-theme bg-surface p-3">
        <div class="grid grid-cols-3 items-center gap-3">
          <div>
            <p class="text-xs font-medium text-muted">Expected (POS)</p>
            <p class="mt-0.5 text-base font-semibold text-body tabular-nums">
              <%= number_to_currency(@reconciliation.expected_credit_total) %>
            </p>
            <p class="text-xs text-muted">Credit</p>
          </div>
          <div>
            <label for="credit_total" class="block text-xs font-medium text-muted">Terminal total</label>
            <%= f.number_field :credit_total,
                id: "credit_total",
                value: @reconciliation.credit_total,
                step: "0.01",
                min: "0",
                placeholder: "0.00",
                class: "mt-0.5 block w-full rounded-md border border-theme bg-surface px-2.5 py-1.5 text-sm text-body focus:border-accent focus:outline-none focus:ring-1 focus:ring-accent tabular-nums",
                data: {
                  terminal_reconciliation_target: "creditInput",
                  action: "input->terminal-reconciliation#calculate"
                } %>
          </div>
          <div class="text-right">
            <p class="text-xs font-medium text-muted">Discrepancy</p>
            <p class="mt-0.5 text-base font-semibold tabular-nums"
               data-terminal-reconciliation-target="creditDiscrepancy">—</p>
          </div>
        </div>
      </div>

      <%# Total discrepancy summary %>
      <div class="rounded-lg border border-theme bg-surface-alt px-3 py-2">
        <div class="flex items-center justify-between">
          <p class="text-sm font-medium text-body">Total discrepancy</p>
          <p class="text-base font-bold tabular-nums"
             data-terminal-reconciliation-target="totalDiscrepancy">—</p>
        </div>
      </div>

      <%# Notes %>
      <div>
        <%= f.label :notes, "Notes (optional)", class: "block text-sm font-medium text-body" %>
        <%= f.text_area :notes,
            rows: 3,
            class: "mt-1 block w-full rounded-md border border-theme bg-surface px-2.5 py-1.5 text-sm text-body focus:border-accent focus:outline-none focus:ring-1 focus:ring-accent",
            placeholder: "Any notes about the terminal settlement…" %>
      </div>
    </div>

    <div class="mt-3 flex items-center justify-end gap-2">
      <%= link_to "Skip for now", session_detail_cash_drawer_path(@session),
          class: "inline-flex min-h-[30px] items-center justify-center rounded-md border border-theme bg-surface px-2.5 py-1 text-sm font-medium text-body hover:bg-[var(--color-border)]/30" %>
      <button type="submit"
              class="inline-flex min-h-[30px] items-center justify-center rounded-md bg-accent px-3 py-1.5 text-sm font-semibold text-[color:var(--color-page)] hover:bg-[var(--color-accent-hover)]">
        Save Reconciliation
      </button>
    </div>
  <% end %>
</div>
