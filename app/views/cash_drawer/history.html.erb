<% content_for :title, "Cash Drawer History" %>

<% content_for :breadcrumbs do %>
  <li><%= link_to "Dashboard", root_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li><%= link_to "Cash Drawer", cash_drawer_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li aria-current="page" class="text-muted">History</li>
<% end %>

<div class="lg:flex lg:min-h-0 lg:flex-1 lg:flex-col">
  <%= render "shared/page_header", title: "Cash Drawer History", description: "All past register sessions." do %>
    <%= link_to "Back to Drawer", cash_drawer_path,
        class: "inline-flex min-h-[30px] items-center justify-center rounded-md border border-theme bg-surface px-2.5 py-1 text-sm font-medium text-body hover:bg-[var(--color-border)]/30",
        data: { turbo_prefetch: true } %>
  <% end %>

  <div class="mt-2 flex flex-col gap-2 lg:min-h-0 lg:flex-1">
    <%= render "shared/filter_bar", config: @filter_config, saved_queries: @saved_queries %>

    <%= render "shared/data_table", config: @filter_config, records: @sessions, pagy: @pagy,
               empty_message: "No cash drawer sessions yet." do |t| %>
      <% t.cell(:opened_at) { |sess| local_time(sess.opened_at, format: :short) } %>
      <% t.cell(:opened_by) { |sess| content_tag(:span, sess.opened_by.name.presence || sess.opened_by.email_address, class: "text-muted") } %>
      <% t.cell(:closed_at) { |sess| sess.closed? ? local_time(sess.closed_at, format: :short) : status_chip("Open", :success) } %>
      <% t.cell(:closed_by) { |sess| sess.closed_by ? content_tag(:span, sess.closed_by.name.presence || sess.closed_by.email_address, class: "text-muted") : "—" } %>
      <% t.cell(:opening_total_cents) { |sess| content_tag(:span, number_to_currency(sess.opening_total), class: "tabular-nums") } %>
      <% t.cell(:closing_total_cents) { |sess| content_tag(:span, sess.closed? ? number_to_currency(sess.closing_total) : "—", class: "tabular-nums") } %>
      <% t.cell(:diff) { |sess|
           if sess.closed?
             color = sess.discrepancy_cents == 0 ? "text-body" : (sess.discrepancy_cents > 0 ? "text-green-600 dark:text-green-400" : "text-red-600 dark:text-red-400")
             content_tag(:span, number_to_currency(sess.discrepancy), class: "font-medium tabular-nums #{color}")
           else
             "—"
           end
         } %>
      <% t.cell(:actions) { |sess| link_to("View", session_detail_cash_drawer_path(sess), class: "text-xs font-medium text-accent hover:opacity-80", data: { turbo_frame: "_top", turbo_prefetch: true }) } %>
    <% end %>
  </div>
</div>
