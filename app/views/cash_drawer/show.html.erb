<% content_for :title, "Cash Drawer" %>

<% content_for :breadcrumbs do %>
  <li><%= link_to "Dashboard", root_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">â€º</span></li>
  <li aria-current="page" class="text-muted">Cash Drawer</li>
<% end %>

<div class="mx-auto max-w-4xl">
  <%= render "shared/page_header", title: "Cash Drawer", description: "Open or close the register and view session history." do %>
    <%= link_to "History", history_cash_drawer_path,
        class: "inline-flex min-h-[30px] items-center justify-center rounded-md border border-theme bg-surface px-2.5 py-1 text-sm font-medium text-body hover:bg-[var(--color-border)]/30",
        data: { turbo_prefetch: true } %>
  <% end %>

  <div class="mt-3">
    <% if @session %>
      <%# Register is OPEN %>
      <div class="rounded-lg border border-[var(--color-success-border)] bg-[var(--color-success-bg)] p-4">
        <div class="flex items-start gap-3">
          <div class="rounded-md bg-green-500/20 p-2">
            <svg class="h-6 w-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div class="flex-1">
            <h2 class="text-sm font-semibold text-[var(--color-success-text)]">Register is Open</h2>
            <p class="mt-0.5 text-xs text-[var(--color-success-text)] opacity-80">
              Opened by <strong><%= @session.opened_by.name.presence || @session.opened_by.email_address %></strong>
              at <%= local_time(@session.opened_at, format: :short) %>
            </p>
            <div class="mt-2 flex items-center gap-3">
              <div>
                <p class="text-xs font-medium text-[var(--color-success-text)] opacity-70">Opening float</p>
                <p class="text-lg font-bold text-[var(--color-success-text)]"><%= number_to_currency(@session.opening_total) %></p>
              </div>
            </div>
          </div>
          <div class="shrink-0">
            <%= link_to "Close Register", close_cash_drawer_path,
                class: "inline-flex min-h-[30px] items-center justify-center rounded-md bg-accent px-3 py-1.5 text-sm font-semibold text-[color:var(--color-page)] hover:bg-[var(--color-accent-hover)]" %>
          </div>
        </div>
      </div>

      <%# Opening count breakdown %>
      <div class="mt-3 rounded-lg border border-theme bg-surface p-3">
        <h3 class="text-sm font-semibold text-body">Opening Count</h3>
        <div class="mt-2 grid grid-cols-1 gap-x-6 gap-y-0.5 sm:grid-cols-2 lg:grid-cols-3">
          <% (@session.opening_counts || {}).each do |denom, qty| %>
            <% value = CashDrawerSession::DENOMINATIONS[denom] %>
            <% next unless value %>
            <div class="flex items-center justify-between text-sm">
              <span class="text-muted"><%= denom_label(denom) %></span>
              <span class="tabular-nums text-body"><%= qty %> &times; <%= number_to_currency(value) %> = <strong><%= number_to_currency(qty.to_i * value) %></strong></span>
            </div>
          <% end %>
        </div>
        <div class="mt-2 flex items-center justify-between border-t border-theme pt-2">
          <span class="text-sm font-semibold text-body">Total</span>
          <span class="text-sm font-bold text-accent tabular-nums"><%= number_to_currency(@session.opening_total) %></span>
        </div>
      </div>

      <% if @session.notes.present? %>
        <div class="mt-2 rounded-lg border border-theme bg-surface p-3">
          <h3 class="text-sm font-semibold text-body">Notes</h3>
          <p class="mt-1 whitespace-pre-wrap text-sm text-muted"><%= @session.notes %></p>
        </div>
      <% end %>
    <% else %>
      <%# Register is CLOSED %>
      <div class="rounded-lg border border-[var(--color-border)] bg-surface p-4">
        <div class="flex items-start gap-3">
          <div class="rounded-md bg-amber-500/20 p-2">
            <svg class="h-6 w-6 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"/>
            </svg>
          </div>
          <div class="flex-1">
            <h2 class="text-sm font-semibold text-body">Register is Closed</h2>
            <p class="mt-0.5 text-xs text-muted">
              The register must be opened before you can process sales. Count the cash in the drawer to get started.
            </p>
          </div>
          <div class="shrink-0">
            <%= link_to "Open Register", open_cash_drawer_path,
                class: "inline-flex min-h-[30px] items-center justify-center rounded-md bg-accent px-3 py-1.5 text-sm font-semibold text-[color:var(--color-page)] hover:bg-[var(--color-accent-hover)]" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%# Recent sessions preview %>
  <% recent = CashDrawerSession.closed.order(closed_at: :desc).limit(5) %>
  <% if recent.any? %>
    <div class="mt-3">
      <h2 class="text-sm font-semibold text-body">Recent sessions</h2>
      <div class="mt-1.5 overflow-x-auto rounded-lg border border-theme bg-surface">
        <table class="min-w-full divide-y divide-[var(--color-border)]">
          <thead class="bg-surface-alt">
            <tr>
              <th class="px-3 py-1 text-left text-xs font-medium uppercase tracking-wider text-muted">Opened</th>
              <th class="px-3 py-1 text-left text-xs font-medium uppercase tracking-wider text-muted">Closed</th>
              <th class="px-3 py-1 text-right text-xs font-medium uppercase tracking-wider text-muted">Opening</th>
              <th class="px-3 py-1 text-right text-xs font-medium uppercase tracking-wider text-muted">Closing</th>
              <th class="px-3 py-1 text-right text-xs font-medium uppercase tracking-wider text-muted">Diff</th>
              <th class="px-3 py-1"></th>
            </tr>
          </thead>
          <tbody class="divide-y divide-[var(--color-border)]">
            <% recent.each do |sess| %>
              <tr>
                <td class="px-3 py-1.5 text-sm text-body"><%= local_time(sess.opened_at, format: :short) %></td>
                <td class="px-3 py-1.5 text-sm text-body"><%= local_time(sess.closed_at, format: :short) %></td>
                <td class="px-3 py-1.5 text-right text-sm text-body"><%= number_to_currency(sess.opening_total) %></td>
                <td class="px-3 py-1.5 text-right text-sm text-body"><%= number_to_currency(sess.closing_total) %></td>
                <td class="px-3 py-1.5 text-right text-sm font-medium <%= sess.discrepancy_cents == 0 ? 'text-body' : (sess.discrepancy_cents > 0 ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400') %>">
                  <%= number_to_currency(sess.discrepancy) %>
                </td>
                <td class="px-3 py-1.5 text-right">
                  <%= link_to "View", session_detail_cash_drawer_path(sess),
                      class: "text-xs font-medium text-accent hover:opacity-80",
                      data: { turbo_prefetch: true } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</div>
