<% content_for :title, "Dashboard" %>

<div class="mx-auto flex w-full max-w-5xl flex-col gap-4">
  <% if Current.user.nil? %>
    <div class="rounded-xl border border-[var(--color-success-border)] bg-[var(--color-success-bg)] p-4 text-[var(--color-success-text)]">
      <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
        <div>
          <p class="font-semibold">You're viewing the dashboard as a guest.</p>
          <p class="text-sm opacity-90">Sign in to see real sales, customers, and activity.</p>
        </div>
        <div class="flex gap-2">
          <%= link_to "Sign in", new_session_path,
              class: "inline-flex min-h-[44px] items-center justify-center rounded-lg bg-accent px-4 py-3 text-base font-semibold text-[color:var(--color-page)] shadow-sm hover:bg-[var(--color-accent-hover)] focus:outline-none focus:ring-2 focus:ring-[var(--color-accent)]" %>
          <%= link_to "Forgot password?", new_password_path,
              class: "inline-flex min-h-[44px] items-center justify-center rounded-lg border-theme bg-surface px-4 py-3 text-base font-semibold text-body ring-1 ring-inset hover:bg-[var(--color-border)] focus:outline-none focus:ring-2 focus:ring-[var(--color-accent)]" %>
        </div>
      </div>
    </div>
  <% end %>

  <% dashboard_description = Current.user ? "Welcome back, #{Current.user.email_address}." : "Overview and shortcuts for your point of sale." %>
  <%= render "shared/page_header", title: "Dashboard", description: dashboard_description %>

  <div class="mt-6 grid grid-cols-1 gap-4 lg:grid-cols-12">
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:col-span-12 lg:grid-cols-4">
      <div class="rounded-xl border border-theme bg-surface p-4 shadow-sm">
      <div class="flex items-start justify-between gap-3">
        <div>
          <p class="text-base font-medium text-muted">Today's sales</p>
          <p class="mt-1 text-2xl font-semibold text-body"><%= number_to_currency(0) %></p>
          <p class="mt-1 text-sm text-muted">vs. yesterday: <span class="font-medium text-body">—</span></p>
        </div>
        <div class="rounded-lg bg-[var(--color-border)]/30 p-2 ring-1 ring-inset border-theme">
          <svg class="h-5 w-5 text-body" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path d="M10 2a1 1 0 011 1v1.07A7 7 0 0117 11a7 7 0 11-7-6.93V3a1 1 0 011-1zm0 5a5 5 0 100 10 5 5 0 000-10z" />
          </svg>
        </div>
      </div>
      </div>

      <div class="rounded-xl border border-theme bg-surface p-4 shadow-sm">
      <div class="flex items-start justify-between gap-3">
        <div>
          <p class="text-base font-medium text-muted">Transactions</p>
          <p class="mt-1 text-2xl font-semibold text-body">0</p>
          <p class="mt-1 text-sm text-muted">Completed today</p>
        </div>
        <div class="rounded-lg bg-[var(--color-border)]/30 p-2 ring-1 ring-inset border-theme">
          <svg class="h-5 w-5 text-body" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm3 3a1 1 0 000 2h6a1 1 0 100-2H7zm0 4a1 1 0 000 2h6a1 1 0 100-2H7z" />
          </svg>
        </div>
      </div>
      </div>

      <div class="rounded-xl border border-theme bg-surface p-4 shadow-sm">
      <div class="flex items-start justify-between gap-3">
        <div>
          <p class="text-base font-medium text-muted">Average ticket</p>
          <p class="mt-1 text-2xl font-semibold text-body"><%= number_to_currency(0) %></p>
          <p class="mt-1 text-sm text-muted">Per transaction</p>
        </div>
        <div class="rounded-lg bg-[var(--color-border)]/30 p-2 ring-1 ring-inset border-theme">
          <svg class="h-5 w-5 text-body" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v1H8a1 1 0 000 2h1v1H8a1 1 0 000 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V9h1a1 1 0 100-2h-1V6z" />
          </svg>
        </div>
      </div>
      </div>

      <div class="rounded-xl border border-theme bg-surface p-4 shadow-sm">
      <div class="flex items-start justify-between gap-3">
        <div>
          <p class="text-base font-medium text-muted">Low stock</p>
          <p class="mt-1 text-2xl font-semibold text-body">0</p>
          <p class="mt-1 text-sm text-muted">Items need attention</p>
        </div>
        <div class="rounded-lg bg-[var(--color-border)]/30 p-2 ring-1 ring-inset border-theme">
          <svg class="h-5 w-5 text-body" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path d="M8.257 3.099c.765-1.36 2.721-1.36 3.486 0l6.516 11.59c.75 1.334-.214 2.99-1.743 2.99H3.484c-1.53 0-2.493-1.656-1.743-2.99l6.516-11.59zM11 14a1 1 0 10-2 0 1 1 0 002 0zm-1-8a1 1 0 00-1 1v4a1 1 0 102 0V7a1 1 0 00-1-1z" />
          </svg>
        </div>
      </div>
      </div>

      <% @visible_metrics.each do |metric| %>
      <div class="rounded-xl border border-theme bg-surface p-4 shadow-sm">
        <div class="flex items-start justify-between gap-3">
          <div>
            <p class="text-base font-medium text-muted"><%= metric[:label] %></p>
            <p class="mt-1 text-2xl font-semibold text-body"><%= metric[:value] || "—" %></p>
            <% if metric[:description].present? %>
              <p class="mt-1 text-sm text-muted"><%= metric[:description] %></p>
            <% end %>
          </div>
          <% if metric[:icon].present? %>
            <div class="rounded-lg bg-[var(--color-border)]/30 p-2 ring-1 ring-inset border-theme">
              <svg class="h-5 w-5 text-body" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path d="<%= metric[:icon] %>" />
              </svg>
            </div>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>

    <div class="lg:col-span-8">
      <div class="rounded-xl border border-theme bg-surface p-4 shadow-sm">
        <div class="flex items-center justify-between">
          <div>
            <h2 class="text-base font-semibold text-body">Sales trend</h2>
            <p class="mt-1 text-sm text-muted">Placeholder chart area (hook to orders later)</p>
          </div>
          <div class="flex items-center gap-2 text-sm">
            <span class="rounded-full bg-[var(--color-border)]/50 px-2 py-1 font-medium text-body">7d</span>
            <span class="rounded-full bg-surface px-2 py-1 font-medium text-muted ring-1 ring-inset border-theme">30d</span>
            <span class="rounded-full bg-surface px-2 py-1 font-medium text-muted ring-1 ring-inset border-theme">90d</span>
          </div>
        </div>

        <div class="mt-4 h-56 w-full rounded-lg bg-[var(--color-border)]/20 ring-1 ring-inset border-theme">
          <div class="flex h-full items-center justify-center">
            <p class="text-base font-medium text-muted">Chart placeholder</p>
          </div>
        </div>
      </div>

      <div class="mt-4 rounded-xl border border-theme bg-surface p-4 shadow-sm">
        <div class="flex items-center justify-between">
          <h2 class="text-base font-semibold text-body">Recent activity</h2>
          <span class="text-sm text-muted">Last 24 hours</span>
        </div>

        <div class="mt-3 overflow-x-auto rounded-lg ring-1 ring-inset border-theme">
          <table class="min-w-full divide-y divide-[var(--color-border)]">
            <thead class="bg-[var(--color-border)]/30">
              <tr>
                <th scope="col" class="px-3 py-3 text-left text-base font-semibold text-body">Type</th>
                <th scope="col" class="px-3 py-3 text-left text-base font-semibold text-body">Details</th>
                <th scope="col" class="px-3 py-3 text-right text-base font-semibold text-body">When</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-[var(--color-border)] bg-surface">
              <tr>
                <td class="px-3 py-3 text-base font-medium text-body">Setup</td>
                <td class="px-3 py-3 text-base text-muted">Dashboard scaffold created</td>
                <td class="px-3 py-3 text-right text-base text-muted">Just now</td>
              </tr>
              <tr>
                <td class="px-3 py-3 text-base font-medium text-body">Auth</td>
                <td class="px-3 py-3 text-base text-muted">Sign in to start tracking sales and customers</td>
                <td class="px-3 py-3 text-right text-base text-muted">—</td>
              </tr>
              <tr>
                <td class="px-3 py-3 text-base font-medium text-body">Next</td>
                <td class="px-3 py-3 text-base text-muted">Hook these panels up to real models (sales, inventory, customers)</td>
                <td class="px-3 py-3 text-right text-base text-muted">—</td>
              </tr>
            </tbody>
          </table>
        </div>

        <p class="mt-3 text-sm text-muted">
          Tip: once you add models for orders/inventory, we can replace these placeholders with real KPIs.
        </p>
      </div>
    </div>

    <div class="lg:col-span-4">
      <div class="rounded-xl border border-theme bg-surface p-4 shadow-sm">
        <div class="flex items-center justify-between">
          <h2 class="text-base font-semibold text-body">Quick actions</h2>
          <span class="text-sm text-muted"><%= local_date(Time.current, "%b %e, %Y") %></span>
        </div>

        <div class="mt-3 grid grid-cols-1 gap-2">
          <% if Current.user.is_a?(Admin) %>
            <%= link_to admin_users_path,
                data: { turbo_prefetch: true },
                class: "group flex min-h-[44px] items-center justify-between rounded-lg px-3 py-3 ring-1 ring-inset border-theme hover:bg-[var(--color-border)]/30" do %>
              <div class="flex items-center gap-3">
                <div class="rounded-md bg-accent p-2 text-[color:var(--color-page)]">
                  <svg class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
                  </svg>
                </div>
                <div>
                  <p class="text-base font-medium text-body">Users</p>
                  <p class="text-sm text-muted">Manage staff accounts</p>
                </div>
              </div>
              <span class="text-sm font-medium text-muted group-hover:text-body">View</span>
            <% end %>
          <% end %>

          <a href="#" class="group flex min-h-[44px] items-center justify-between rounded-lg px-3 py-3 ring-1 ring-inset border-theme hover:bg-[var(--color-border)]/30">
            <div class="flex items-center gap-3">
              <div class="rounded-md bg-accent p-2 text-[color:var(--color-page)]">
                <svg class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path d="M3 3a1 1 0 011-1h12a1 1 0 011 1v5a1 1 0 11-2 0V4H5v12h6a1 1 0 110 2H4a1 1 0 01-1-1V3z" />
                  <path d="M14 12a1 1 0 011 1v2h2a1 1 0 110 2h-2v2a1 1 0 11-2 0v-2h-2a1 1 0 110-2h2v-2a1 1 0 011-1z" />
                </svg>
              </div>
              <div>
                <p class="text-base font-medium text-body">New sale</p>
                <p class="text-sm text-muted">Start a transaction</p>
              </div>
            </div>
            <span class="text-sm font-medium text-muted group-hover:text-body">Soon</span>
          </a>

          <a href="#" class="group flex min-h-[44px] items-center justify-between rounded-lg px-3 py-3 ring-1 ring-inset border-theme hover:bg-[var(--color-border)]/30">
            <div class="flex items-center gap-3">
              <div class="rounded-md bg-accent p-2 text-[color:var(--color-page)]">
                <svg class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path d="M2 5a2 2 0 012-2h6a2 2 0 012 2v1h4a2 2 0 012 2v7a2 2 0 01-2 2H4a2 2 0 01-2-2V5zm2 0v10h12V8h-4a2 2 0 01-2-2V5H4z" />
                </svg>
              </div>
              <div>
                <p class="text-base font-medium text-body">Import catalog</p>
                <p class="text-sm text-muted">Load items from a file</p>
              </div>
            </div>
            <span class="text-sm font-medium text-muted group-hover:text-body">Soon</span>
          </a>

          <%= link_to rails_health_check_path,
              data: { turbo_prefetch: true },
              class: "group flex min-h-[44px] items-center justify-between rounded-lg px-3 py-3 ring-1 ring-inset border-theme hover:bg-[var(--color-border)]/30" do %>
            <div class="flex items-center gap-3">
              <div class="rounded-md bg-accent p-2 text-[color:var(--color-page)]">
                <svg class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path d="M10 2a8 8 0 100 16 8 8 0 000-16zm1 11H9a1 1 0 01-1-1V6a1 1 0 112 0v5h1a1 1 0 110 2z" />
                </svg>
              </div>
              <div>
                <p class="text-base font-medium text-body">System status</p>
                <p class="text-sm text-muted">Health check endpoint</p>
              </div>
            </div>
            <span class="text-sm font-medium text-muted group-hover:text-body">View</span>
          <% end %>
        </div>
      </div>

      <div class="mt-4 rounded-xl border border-theme bg-surface p-4 shadow-sm">
        <h2 class="text-base font-semibold text-body">Notes</h2>
        <p class="mt-2 text-base text-muted">
          Add inventory + orders models next; then we’ll wire up sales totals, low-stock alerts, and real activity.
        </p>
      </div>
    </div>
  </div>
</div>
