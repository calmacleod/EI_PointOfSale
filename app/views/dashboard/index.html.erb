<% content_for :title, "Dashboard" %>

<div class="mx-auto flex w-full max-w-6xl flex-col gap-2">
  <% if Current.user.nil? %>
    <div class="rounded-lg border border-[var(--color-success-border)] bg-[var(--color-success-bg)] p-2.5 text-[var(--color-success-text)]">
      <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
        <div>
          <p class="text-sm font-semibold">You're viewing the dashboard as a guest.</p>
          <p class="text-xs opacity-90">Sign in to see real sales, customers, and activity.</p>
        </div>
        <div class="flex gap-2">
          <%= link_to "Sign in", new_session_path,
              class: "inline-flex min-h-[30px] items-center justify-center rounded-md bg-accent px-2.5 py-1 text-sm font-semibold text-[color:var(--color-page)] hover:bg-[var(--color-accent-hover)]" %>
          <%= link_to "Forgot password?", new_password_path,
              class: "inline-flex min-h-[30px] items-center justify-center rounded-md border-theme bg-surface px-2.5 py-1 text-sm font-semibold text-body ring-1 ring-inset hover:bg-[var(--color-border)]" %>
        </div>
      </div>
    </div>
  <% end %>

  <% dashboard_description = Current.user ? "Welcome back, #{Current.user.email_address}." : "Overview and shortcuts for your point of sale." %>
  <%= render "shared/page_header", title: "Dashboard", description: dashboard_description %>

  <% if Current.user %>
    <% drawer_session = CashDrawerSession.current %>
    <div class="mt-1 flex items-center gap-2 rounded-lg border border-theme bg-surface px-3 py-1.5">
      <% if drawer_session %>
        <span class="flex h-2 w-2 rounded-full bg-green-500"></span>
        <span class="text-xs font-medium text-body">Register open</span>
        <span class="text-xs text-muted">
          &mdash; <%= number_to_currency(drawer_session.opening_total) %> float,
          opened <%= time_ago_in_words(drawer_session.opened_at) %> ago
        </span>
        <span class="ml-auto">
          <%= link_to "Close", close_cash_drawer_path,
              class: "text-xs font-medium text-accent hover:opacity-80" %>
        </span>
      <% else %>
        <span class="flex h-2 w-2 rounded-full bg-amber-500"></span>
        <span class="text-xs font-medium text-body">Register closed</span>
        <span class="ml-auto">
          <%= link_to "Open Register", open_cash_drawer_path,
              class: "text-xs font-medium text-accent hover:opacity-80" %>
        </span>
      <% end %>
    </div>
  <% end %>

  <% if @metrics_last_updated %>
    <p class="mt-2 text-xs text-muted">
      Dashboard metrics updated <%= time_ago_in_words(@metrics_last_updated) %> ago
    </p>
  <% end %>

  <%# === Top metric cards === %>
  <div class="mt-2 grid grid-cols-1 gap-2 sm:grid-cols-2 lg:grid-cols-4">
    <% @visible_metrics.each do |metric| %>
      <% if metric[:link_path].present? %>
        <%= link_to public_send(metric[:link_path]), class: "group rounded-lg border border-theme bg-surface p-2.5 hover:bg-[var(--color-border)]/30" do %>
          <div class="flex items-start justify-between gap-2">
            <div>
              <p class="text-xs font-medium text-muted group-hover:text-body"><%= metric[:label] %></p>
              <p class="mt-0.5 text-lg font-semibold text-body">
                <% if metric[:format] == :currency %>
                  <%= number_to_currency(metric[:value] || 0) %>
                <% else %>
                  <%= number_with_delimiter((metric[:value] || 0).to_i) %>
                <% end %>
              </p>
              <% if metric[:description].present? %>
                <p class="mt-0.5 text-xs text-muted"><%= metric[:description] %></p>
              <% end %>
            </div>
            <% if metric[:icon].present? %>
              <div class="rounded-md bg-[var(--color-border)]/30 p-1.5 ring-1 ring-inset border-theme">
                <svg class="h-4 w-4 text-body" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path d="<%= metric[:icon] %>" />
                </svg>
              </div>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <div class="rounded-lg border border-theme bg-surface p-2.5">
          <div class="flex items-start justify-between gap-2">
            <div>
              <p class="text-xs font-medium text-muted"><%= metric[:label] %></p>
              <p class="mt-0.5 text-lg font-semibold text-body">
                <% if metric[:format] == :currency %>
                  <%= number_to_currency(metric[:value] || 0) %>
                <% else %>
                  <%= number_with_delimiter((metric[:value] || 0).to_i) %>
                <% end %>
              </p>
              <% if metric[:description].present? %>
                <p class="mt-0.5 text-xs text-muted"><%= metric[:description] %></p>
              <% end %>
            </div>
            <% if metric[:icon].present? %>
              <div class="rounded-md bg-[var(--color-border)]/30 p-1.5 ring-1 ring-inset border-theme">
                <svg class="h-4 w-4 text-body" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path d="<%= metric[:icon] %>" />
                </svg>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="grid grid-cols-1 gap-2 lg:grid-cols-12">
    <%# === Left column: Recent orders + Store tasks === %>
    <div class="lg:col-span-8 flex flex-col gap-2">
      <%# --- Recent orders table --- %>
      <div class="rounded-lg border border-theme bg-surface overflow-hidden">
        <div class="flex items-center justify-between border-b border-theme bg-surface-alt px-3 py-2">
          <h2 class="text-sm font-semibold text-body">Recent orders</h2>
          <%= link_to "View all", orders_path, class: "text-xs font-medium text-accent hover:opacity-80" %>
        </div>

        <table class="min-w-full divide-y divide-[var(--color-border)]">
          <thead class="bg-surface-alt">
            <tr>
              <th scope="col" class="px-3 py-2 text-left text-xs font-medium uppercase tracking-wider text-muted">Order</th>
              <th scope="col" class="px-3 py-2 text-left text-xs font-medium uppercase tracking-wider text-muted">Customer</th>
              <th scope="col" class="px-3 py-2 text-left text-xs font-medium uppercase tracking-wider text-muted">Status</th>
              <th scope="col" class="px-3 py-2 text-right text-xs font-medium uppercase tracking-wider text-muted">Total</th>
              <th scope="col" class="px-3 py-2 text-right text-xs font-medium uppercase tracking-wider text-muted">When</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-[var(--color-border)]">
            <% if @recent_orders.any? %>
              <% @recent_orders.each do |order| %>
                <tr>
                  <td class="px-3 py-2 text-sm font-medium text-body">
                    <%= link_to order.number, order_path(order), class: "text-accent hover:opacity-80" %>
                  </td>
                  <td class="px-3 py-2 text-sm text-muted"><%= order.customer_name %></td>
                  <td class="px-3 py-2 text-sm">
                    <% status_class = case order.status
                                     when "draft" then "bg-blue-100 text-blue-800"
                                     when "held" then "bg-yellow-100 text-yellow-800"
                                     when "completed" then "bg-green-100 text-green-800"
                                     when "voided" then "bg-red-100 text-red-800"
                                     when "refunded" then "bg-purple-100 text-purple-800"
                                     when "partially_refunded" then "bg-orange-100 text-orange-800"
                                     when "cancelled" then "bg-slate-100 text-slate-600"
                                     end %>
                    <span class="rounded-full px-2 py-0.5 text-xs font-medium <%= status_class %>"><%= order.display_status %></span>
                  </td>
                  <td class="px-3 py-2 text-right text-sm font-medium text-body"><%= number_to_currency(order.total) %></td>
                  <td class="px-3 py-2 text-right text-sm text-muted"><%= time_ago_in_words(order.created_at) %> ago</td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="5" class="px-3 py-4 text-center text-sm text-muted">No orders yet. Open the register to start selling.</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <%# --- Store tasks (current user) --- %>
      <% if Current.user && @my_tasks.present? %>
        <div class="rounded-lg border border-theme bg-surface p-2.5">
          <div class="flex items-center justify-between">
            <h2 class="text-sm font-semibold text-body">Your tasks</h2>
            <%= link_to "All tasks", store_tasks_path, class: "text-xs font-medium text-accent hover:opacity-80" %>
          </div>

          <div class="mt-2 flex flex-col gap-1.5">
            <% @my_tasks.each do |task| %>
              <div class="flex items-start gap-2 rounded-lg border border-theme px-2 py-1.5 <%= task.overdue? ? 'bg-[var(--color-error-bg)]' : 'bg-surface' %>">
                <div class="mt-0.5 flex-shrink-0">
                  <%
                    task_dot_colors = {
                      "not_started" => "bg-[var(--color-neutral-text)]",
                      "in_progress" => "bg-[var(--color-info-text)]",
                      "blocked" => "bg-[var(--color-warning-text)]"
                    }
                  %>
                  <span class="flex h-2 w-2 rounded-full <%= task_dot_colors[task.status] || 'bg-[var(--color-neutral-text)]' %>"></span>
                </div>
                <div class="min-w-0 flex-1">
                  <div class="flex items-center gap-1.5">
                    <%= link_to task.title, store_task_path(task), class: "text-sm font-medium text-body truncate hover:text-accent" %>
                    <% if task.overdue? %>
                      <%= status_chip("Overdue", :error) %>
                    <% end %>
                  </div>
                  <div class="flex items-center gap-2 text-xs text-muted">
                    <span><%= task.status_label %></span>
                    <% if task.due_date.present? %>
                      <span>&middot; Due <%= task.due_date.strftime("%b %e") %></span>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <%# === Right column: Quick actions === %>
    <div class="lg:col-span-4">
      <div class="rounded-lg border border-theme bg-surface p-2.5">
        <div class="flex items-center justify-between">
          <h2 class="text-sm font-semibold text-body">Quick actions</h2>
          <span class="text-xs text-muted"><%= local_date(Time.current, "%b %e, %Y") %></span>
        </div>

        <div class="mt-2 grid grid-cols-1 gap-1.5">
          <%= link_to register_path,
              data: { turbo_prefetch: true },
              class: "group flex min-h-[30px] items-center justify-between px-2 py-1 rounded-lg border border-theme hover:bg-[var(--color-border)]/30" do %>
            <div class="flex items-center gap-2">
              <div class="rounded-md bg-accent p-1.5 text-[color:var(--color-page)]">
                <svg class="h-3.5 w-3.5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path d="M3 3a1 1 0 011-1h12a1 1 0 011 1v5a1 1 0 11-2 0V4H5v12h6a1 1 0 110 2H4a1 1 0 01-1-1V3z" />
                  <path d="M14 12a1 1 0 011 1v2h2a1 1 0 110 2h-2v2a1 1 0 11-2 0v-2h-2a1 1 0 110-2h2v-2a1 1 0 011-1z" />
                </svg>
              </div>
              <div>
                <p class="text-sm font-medium text-body">New sale</p>
                <p class="text-xs text-muted">Open the register</p>
              </div>
            </div>
            <span class="text-xs font-medium text-muted group-hover:text-body">Go</span>
          <% end %>

          <%= link_to orders_path,
              data: { turbo_prefetch: true },
              class: "group flex min-h-[30px] items-center justify-between px-2 py-1 rounded-lg border border-theme hover:bg-[var(--color-border)]/30" do %>
            <div class="flex items-center gap-2">
              <div class="rounded-md bg-accent p-1.5 text-[color:var(--color-page)]">
                <svg class="h-3.5 w-3.5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm3 3a1 1 0 000 2h6a1 1 0 100-2H7zm0 4a1 1 0 000 2h6a1 1 0 100-2H7z" />
                </svg>
              </div>
              <div>
                <p class="text-sm font-medium text-body">Orders</p>
                <p class="text-xs text-muted">View all orders</p>
              </div>
            </div>
            <span class="text-xs font-medium text-muted group-hover:text-body">View</span>
          <% end %>

          <%= link_to held_orders_path,
              data: { turbo_prefetch: true },
              class: "group flex min-h-[30px] items-center justify-between px-2 py-1 rounded-lg border border-theme hover:bg-[var(--color-border)]/30" do %>
            <div class="flex items-center gap-2">
              <div class="rounded-md bg-accent p-1.5 text-[color:var(--color-page)]">
                <svg class="h-3.5 w-3.5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" />
                </svg>
              </div>
              <div>
                <p class="text-sm font-medium text-body">Held orders</p>
                <p class="text-xs text-muted">Resume a held order</p>
              </div>
            </div>
            <span class="text-xs font-medium text-muted group-hover:text-body">View</span>
          <% end %>

          <%= link_to products_path,
              data: { turbo_prefetch: true },
              class: "group flex min-h-[30px] items-center justify-between px-2 py-1 rounded-lg border border-theme hover:bg-[var(--color-border)]/30" do %>
            <div class="flex items-center gap-2">
              <div class="rounded-md bg-accent p-1.5 text-[color:var(--color-page)]">
                <svg class="h-3.5 w-3.5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path d="M2 5a2 2 0 012-2h6a2 2 0 012 2v1h4a2 2 0 012 2v7a2 2 0 01-2 2H4a2 2 0 01-2-2V5zm2 0v10h12V8h-4a2 2 0 01-2-2V5H4z" />
                </svg>
              </div>
              <div>
                <p class="text-sm font-medium text-body">Products</p>
                <p class="text-xs text-muted">Manage inventory</p>
              </div>
            </div>
            <span class="text-xs font-medium text-muted group-hover:text-body">View</span>
          <% end %>

          <% if Current.user.is_a?(Admin) %>
            <%= link_to admin_users_path,
                data: { turbo_prefetch: true },
                class: "group flex min-h-[30px] items-center justify-between px-2 py-1 rounded-lg border border-theme hover:bg-[var(--color-border)]/30" do %>
              <div class="flex items-center gap-2">
                <div class="rounded-md bg-accent p-1.5 text-[color:var(--color-page)]">
                  <svg class="h-3.5 w-3.5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-medium text-body">Users</p>
                  <p class="text-xs text-muted">Manage staff accounts</p>
                </div>
              </div>
              <span class="text-xs font-medium text-muted group-hover:text-body">View</span>
            <% end %>
          <% end %>

          <%= link_to rails_health_check_path,
              data: { turbo_prefetch: true },
              class: "group flex min-h-[30px] items-center justify-between px-2 py-1 rounded-lg border border-theme hover:bg-[var(--color-border)]/30" do %>
            <div class="flex items-center gap-2">
              <div class="rounded-md bg-accent p-1.5 text-[color:var(--color-page)]">
                <svg class="h-3.5 w-3.5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path d="M10 2a8 8 0 100 16 8 8 0 000-16zm1 11H9a1 1 0 01-1-1V6a1 1 0 112 0v5h1a1 1 0 110 2z" />
                </svg>
              </div>
              <div>
                <p class="text-sm font-medium text-body">System status</p>
                <p class="text-xs text-muted">Health check endpoint</p>
              </div>
            </div>
            <span class="text-xs font-medium text-muted group-hover:text-body">View</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
