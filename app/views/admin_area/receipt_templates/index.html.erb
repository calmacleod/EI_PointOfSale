<% content_for :title, "Receipt Templates" %>

<% content_for :breadcrumbs do %>
  <li><%= link_to "Dashboard", root_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li><%= link_to "Admin settings", admin_settings_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li aria-current="page" class="text-muted">Receipt Templates</li>
<% end %>

<div class="lg:flex lg:min-h-0 lg:flex-1 lg:flex-col">
  <%= render "shared/page_header", title: "Receipt Templates", description: "Configure templates for your thermal receipt printer." do %>
    <%= link_to "Add template", new_admin_receipt_template_path,
        class: "inline-flex min-h-[30px] items-center justify-center rounded-md bg-accent px-2.5 py-1 text-sm font-semibold text-[color:var(--color-page)] hover:bg-[var(--color-accent-hover)]",
        data: { turbo_prefetch: true } %>
  <% end %>

  <div class="mt-2 flex flex-col gap-2 lg:min-h-0 lg:flex-1">
    <%= render "shared/filter_bar", config: @filter_config, saved_queries: @saved_queries %>

    <%= render "shared/data_table", config: @filter_config, records: @receipt_templates, pagy: @pagy,
               empty_message: "No receipt templates yet. Add one to get started." do |t| %>
      <% t.cell(:name) { |template| link_to template.name, admin_receipt_template_path(template), class: "font-medium text-accent hover:underline", data: { turbo_frame: "_top", turbo_prefetch: true } } %>
      <% t.cell(:paper_width_mm) { |template| ReceiptTemplate::PAPER_WIDTHS.dig(template.paper_width_mm, :label) || "#{template.paper_width_mm} mm" } %>
      <% t.cell(:chars_per_line) { |template| template.chars_per_line } %>
      <% t.cell(:active) { |template| template.active? ? status_chip("Active", :success) : status_chip("Inactive", :neutral) } %>
      <% t.cell(:created_at) { |template| local_time(template.created_at, format: :short) } %>
      <% t.cell(:actions) { |template|
           capture do
             concat(button_to("Activate", activate_admin_receipt_template_path(template), method: :patch, class: "text-xs font-medium text-green-600 dark:text-green-400 hover:opacity-80")) unless template.active?
             concat(" ")
             concat(link_to("Edit", edit_admin_receipt_template_path(template), class: "text-xs font-medium text-accent hover:opacity-80", data: { turbo_frame: "_top", turbo_prefetch: true }))
           end
         } %>
    <% end %>
  </div>
</div>
