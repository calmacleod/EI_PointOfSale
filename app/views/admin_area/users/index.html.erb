<% content_for :title, "Users" %>
<% content_for :breadcrumbs do %>
  <li><%= link_to "Dashboard", root_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li><%= link_to "Admin settings", admin_settings_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li aria-current="page" class="text-muted">Users</li>
<% end %>

<div class="mx-auto max-w-5xl">
  <%= render "shared/page_header", title: "Users" %>

  <div class="mt-6 flex flex-col gap-4">
    <%= render "shared/table_filters",
        search_path: admin_users_path,
        turbo_frame: "users_table",
        label: "Search users",
        placeholder: "Search users…" %>

    <%= turbo_frame_tag "users_table" do %>
  <div class="overflow-x-auto rounded-lg border border-theme bg-surface">
    <table class="min-w-full divide-y divide-[var(--color-border)]">
      <thead class="bg-[var(--color-border)]/30">
        <tr>
          <th class="px-4 py-3 text-left text-base font-medium uppercase tracking-wider text-muted">Name</th>
          <th class="px-4 py-3 text-left text-base font-medium uppercase tracking-wider text-muted">Email</th>
          <th class="px-4 py-3 text-left text-base font-medium uppercase tracking-wider text-muted">Type</th>
          <th class="px-4 py-3 text-left text-base font-medium uppercase tracking-wider text-muted">Active</th>
          <th class="px-4 py-3 text-left text-base font-medium uppercase tracking-wider text-muted">Created</th>
          <th class="px-4 py-3"></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-[var(--color-border)] bg-surface">
        <% @users.each do |user| %>
          <tr>
            <td class="px-4 py-3 text-base text-body">
              <%= link_to (user.name.presence || "—"), admin_user_path(user), class: "font-medium text-accent hover:underline", data: { turbo_frame: "_top", turbo_prefetch: true } %>
            </td>
            <td class="px-4 py-3 text-base text-body">
              <%= link_to user.email_address, admin_user_path(user), class: "text-accent hover:underline", data: { turbo_frame: "_top", turbo_prefetch: true } %>
            </td>
            <td class="px-4 py-3 text-base text-body"><%= user.type %></td>
            <td class="px-4 py-3 text-base text-body"><%= user.active? ? "Yes" : "No" %></td>
            <td class="px-4 py-3 text-base text-body text-muted"><%= l(user.created_at, format: :short) %></td>
            <td class="px-4 py-3 text-right text-base">
              <%= link_to "Edit", edit_admin_user_path(user),
                  class: "inline-flex items-center px-3 py-2 font-medium text-accent hover:opacity-80 rounded",
                  data: { turbo_frame: "_top", turbo_prefetch: true } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= render "shared/pagy_nav" %>
    <% end %>
  </div>
</div>
