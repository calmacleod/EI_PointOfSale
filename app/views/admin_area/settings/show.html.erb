<% content_for :title, "Admin settings" %>

<% content_for :breadcrumbs do %>
  <li><%= link_to "Dashboard", root_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li aria-current="page" class="text-muted">Admin settings</li>
<% end %>

<div class="mx-auto max-w-5xl">
  <%= render "shared/page_header", title: "Admin settings", description: "Configure the application and manage reference data." %>

  <div class="mt-6 space-y-4">
    <div class="form-card rounded-xl border border-theme bg-surface p-6 shadow-sm">
      <h2 class="text-lg font-semibold text-body">Reference data</h2>
      <p class="mt-1 text-base text-muted">Tax codes are used for product and service pricing.</p>
      <div class="mt-4">
        <%= link_to "Manage tax codes", admin_tax_codes_path,
            class: "inline-flex min-h-[44px] items-center justify-center rounded-lg bg-accent px-4 py-3 text-base font-semibold text-[color:var(--color-page)] shadow-sm hover:bg-[var(--color-accent-hover)]",
            data: { turbo_prefetch: true } %>
      </div>
    </div>
  </div>

  <div class="mt-6 rounded-xl border border-theme bg-surface p-4 shadow-sm">
    <div class="rounded-lg border border-[var(--color-success-border)] bg-[var(--color-success-bg)] px-4 py-3">
      <p class="text-base font-semibold text-[var(--color-success-text)]">Not wired up yet</p>
      <p class="mt-1 text-base text-[var(--color-success-text)] opacity-90">
        These inputs are placeholders only — no values are saved.
      </p>
    </div>

    <div class="mt-5 grid grid-cols-1 gap-4 sm:grid-cols-2">
      <div class="sm:col-span-2">
        <label class="block text-base font-medium text-body">Store name</label>
        <input
          type="text"
          value="Example Store"
          autocomplete="off"
          disabled
          class="mt-1 block w-full min-h-[44px] rounded-md border-[var(--color-border)] bg-[var(--color-border)]/20 px-3 py-2 text-body shadow-sm disabled:cursor-not-allowed"
>
        <p class="mt-1 text-sm text-muted">Shown on receipts and in the app header.</p>
      </div>

      <div>
        <label class="block text-base font-medium text-body">Default currency</label>
        <select
          disabled
          class="mt-1 block w-full min-h-[44px] rounded-md border-[var(--color-border)] bg-[var(--color-border)]/20 px-3 py-2 text-body shadow-sm disabled:cursor-not-allowed"
        >
          <option selected>USD</option>
          <option>CAD</option>
          <option>EUR</option>
        </select>
        <p class="mt-1 text-sm text-muted">Used for money formatting across the POS.</p>
      </div>

      <div>
        <label class="block text-base font-medium text-body">Default tax rate</label>
        <div class="mt-1 flex items-center gap-2">
          <input
            type="text"
            value="0.00"
            autocomplete="off"
            disabled
            class="block w-full min-h-[44px] rounded-md border-[var(--color-border)] bg-[var(--color-border)]/20 px-3 py-2 text-body shadow-sm disabled:cursor-not-allowed"
>
          <span class="text-base text-muted">%</span>
        </div>
        <p class="mt-1 text-sm text-muted">Applied when an item doesn’t have a specific tax rule.</p>
      </div>

      <div>
        <label class="block text-base font-medium text-body">Low stock threshold</label>
        <input
          type="number"
          value="5"
          autocomplete="off"
          disabled
          class="mt-1 block w-full min-h-[44px] rounded-md border-[var(--color-border)] bg-[var(--color-border)]/20 px-3 py-2 text-body shadow-sm disabled:cursor-not-allowed"
>
        <p class="mt-1 text-sm text-muted">Triggers the “Low stock” dashboard widget.</p>
      </div>

      <div>
        <label class="block text-base font-medium text-body">Receipt footer</label>
        <textarea
          rows="4"
          disabled
          class="mt-1 block w-full min-h-[44px] rounded-md border-[var(--color-border)] bg-[var(--color-border)]/20 px-3 py-2 text-body shadow-sm disabled:cursor-not-allowed"
        >Thanks for shopping with us!</textarea>
        <p class="mt-1 text-sm text-muted">Printed at the bottom of receipts.</p>
      </div>

      <div class="sm:col-span-2">
        <div class="rounded-lg border border-theme bg-[var(--color-border)]/20 px-4 py-3">
          <div class="flex items-start justify-between gap-4">
            <div>
              <p class="text-base font-medium text-body">Require manager PIN for refunds</p>
              <p class="mt-0.5 text-sm text-muted">Placeholder toggle (implement later).</p>
            </div>
            <div class="pt-0.5">
              <input
                type="checkbox"
                disabled
                class="h-5 w-5 rounded border-[var(--color-border)] text-accent focus:ring-[var(--color-accent)] disabled:cursor-not-allowed"
>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-6 flex items-center justify-end">
      <button
        type="button"
        disabled
        class="inline-flex min-h-[44px] items-center justify-center rounded-lg bg-accent px-4 py-3 text-base font-semibold text-[color:var(--color-page)] shadow-sm opacity-50 disabled:cursor-not-allowed"
      >
        Save (coming soon)
      </button>
    </div>
  </div>
</div>
