<% content_for :title, @supplier.name %>
<% content_for :breadcrumbs do %>
  <li><%= link_to "Dashboard", root_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li><%= link_to "Admin settings", admin_settings_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li><%= link_to "Suppliers", admin_suppliers_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li aria-current="page" class="text-muted"><%= @supplier.name %></li>
<% end %>

<div class="mx-auto max-w-2xl">
  <%= render "shared/page_header", title: @supplier.name, description: "Supplier contact and details." do %>
    <div class="flex items-center gap-2">
      <%= link_to "Back to suppliers", admin_suppliers_path, class: "inline-flex min-h-[44px] items-center justify-center rounded-lg border border-theme bg-surface px-4 py-3 text-base font-semibold text-body hover:bg-[var(--color-border)]/30", data: { turbo_prefetch: true } %>
      <%= link_to "Edit", edit_admin_supplier_path(@supplier),
          class: "inline-flex min-h-[44px] items-center justify-center rounded-lg bg-accent px-4 py-3 text-base font-semibold text-[color:var(--color-page)] shadow-sm hover:bg-[var(--color-accent-hover)]",
          data: { turbo_prefetch: true } %>
    </div>
  <% end %>

  <section class="mt-6 overflow-hidden rounded-xl border border-theme bg-surface shadow-sm" aria-labelledby="supplier-details-heading">
    <div class="border-b border-theme bg-[var(--color-border)]/20 px-6 py-3">
      <h2 id="supplier-details-heading" class="text-base font-semibold text-body">Details</h2>
      <p class="mt-0.5 text-sm text-muted">Contact information</p>
    </div>
    <dl class="divide-y divide-[var(--color-border)]">
      <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-muted">Name</dt>
        <dd class="mt-1 text-base text-body sm:col-span-2 sm:mt-0"><%= @supplier.name %></dd>
      </div>
      <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-muted">Phone</dt>
        <dd class="mt-1 text-base text-body sm:col-span-2 sm:mt-0"><%= @supplier.phone.presence || "—" %></dd>
      </div>
    </dl>
  </section>

  <section class="mt-6 overflow-hidden rounded-xl border border-theme bg-surface shadow-sm" aria-labelledby="supplier-meta-heading">
    <div class="border-b border-theme bg-[var(--color-border)]/20 px-6 py-3">
      <h2 id="supplier-meta-heading" class="text-base font-semibold text-body">Record info</h2>
      <p class="mt-0.5 text-sm text-muted">Timestamps</p>
    </div>
    <dl class="divide-y divide-[var(--color-border)]">
      <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-muted">Created</dt>
        <dd class="mt-1 text-base text-body sm:col-span-2 sm:mt-0"><%= @supplier.created_at.strftime("%b %-d, %Y at %-I:%M %p") %></dd>
      </div>
      <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-muted">Last updated</dt>
        <dd class="mt-1 text-base text-body sm:col-span-2 sm:mt-0"><%= @supplier.updated_at.strftime("%b %-d, %Y at %-I:%M %p") %></dd>
      </div>
    </dl>
  </section>

  <%= render "shared/audit_trail", auditable: @supplier %>
</div>
