<%= form_with model: tax_code, url: tax_code.persisted? ? admin_tax_code_path(tax_code) : admin_tax_codes_path, class: "divide-y divide-[var(--color-border)]" do |f| %>
  <% if tax_code.errors.any? %>
    <div class="bg-[var(--color-error-bg)] px-3 py-2">
      <p class="text-sm font-semibold text-[var(--color-error-text)]">Please fix the following:</p>
      <ul class="mt-1 list-disc space-y-0.5 pl-5 text-sm text-[var(--color-error-text)]">
        <% tax_code.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="px-3 py-2.5 space-y-2">
    <div class="grid grid-cols-1 gap-2 sm:grid-cols-2">
      <div>
        <%= f.label :code, class: "text-sm font-medium text-body" %>
        <%= f.text_field :code,
            placeholder: "e.g. HST",
            class: "input-field min-h-[30px] w-full" %>
      </div>
      <div>
        <%= f.label :name, class: "text-sm font-medium text-body" %>
        <%= f.text_field :name,
            placeholder: "e.g. Ontario HST",
            class: "input-field min-h-[30px] w-full" %>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-2 sm:grid-cols-2">
      <div>
        <%= f.label :rate, "Rate (%)", class: "text-sm font-medium text-body" %>
        <%= f.number_field :rate,
            step: 0.01,
            min: 0,
            max: 100,
            value: tax_code.rate.present? ? (tax_code.rate * 100) : nil,
            placeholder: "e.g. 13",
            class: "input-field min-h-[30px] w-full" %>
        <p class="mt-0.5 text-xs text-muted">Enter as percentage (e.g. 13 for 13%).</p>
      </div>
      <div>
        <%= f.label :exemption_type, class: "text-sm font-medium text-body" %>
        <%= f.text_field :exemption_type,
            placeholder: "Optional",
            class: "input-field min-h-[30px] w-full" %>
      </div>
    </div>

    <div>
      <%= f.label :province_code, "Province", class: "text-sm font-medium text-body" %>
      <%= f.text_field :province_code,
          placeholder: "e.g. ON",
          class: "input-field min-h-[30px] w-full" %>
    </div>

    <div>
      <%= f.label :notes, class: "text-sm font-medium text-body" %>
      <%= f.text_area :notes, rows: 3,
          placeholder: "Optional notes",
          class: "input-field w-full" %>
    </div>
  </div>

  <div class="flex items-center justify-between px-3 py-2">
    <% if tax_code.persisted? %>
      <%= button_to "Remove", admin_tax_code_path(tax_code), method: :delete,
          data: { turbo_confirm: "Remove this tax code? Products and services using it will need to be updated." },
          class: "inline-flex min-h-[30px] items-center justify-center px-2.5 py-1 text-sm font-medium text-[var(--color-error-text)] hover:opacity-80" %>
    <% else %>
      <span></span>
    <% end %>
    <%= f.submit tax_code.persisted? ? "Save changes" : "Create tax code",
        class: "inline-flex min-h-[30px] items-center justify-center bg-accent px-2.5 py-1 text-sm font-medium text-[color:var(--color-page)] hover:bg-[var(--color-accent-hover)]" %>
  </div>
<% end %>
