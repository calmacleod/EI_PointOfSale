<% content_for :title, "Tax codes" %>
<% content_for :breadcrumbs do %>
  <li><%= link_to "Dashboard", root_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li><%= link_to "Admin settings", admin_settings_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li aria-current="page" class="text-muted">Tax codes</li>
<% end %>

<div class="lg:flex lg:min-h-0 lg:flex-1 lg:flex-col">
  <%= render "shared/page_header", title: "Tax codes" do %>
    <%= link_to "Add tax code", new_admin_tax_code_path,
        class: "inline-flex min-h-[30px] items-center justify-center rounded-md bg-accent px-2.5 py-1 text-sm font-semibold text-[color:var(--color-page)] hover:bg-[var(--color-accent-hover)]",
        data: { turbo_prefetch: true } %>
  <% end %>

  <div class="mt-2 flex flex-col gap-2 lg:min-h-0 lg:flex-1">
    <%= render "shared/filter_bar", config: @filter_config, saved_queries: @saved_queries %>

    <%= render "shared/data_table", config: @filter_config, records: @tax_codes, pagy: @pagy,
               empty_message: "No tax codes yet. Add one to get started." do |t| %>
      <% t.cell(:code) { |tc| link_to tc.code, admin_tax_code_path(tc), class: "font-medium text-accent hover:underline", data: { turbo_frame: "_top", turbo_prefetch: true } } %>
      <% t.cell(:name) { |tc| tc.name } %>
      <% t.cell(:rate) { |tc| number_to_percentage(tc.rate * 100, precision: 2) } %>
      <% t.cell(:exemption_type) { |tc| tc.exemption_type.presence || "—" } %>
      <% t.cell(:province_code) { |tc| tc.province_code.presence || "—" } %>
      <% t.cell(:created_at) { |tc| local_time(tc.created_at, format: :short) } %>
      <% t.cell(:updated_at) { |tc| local_time(tc.updated_at, format: :short) } %>
      <% t.cell(:actions) { |tc| link_to("Edit", edit_admin_tax_code_path(tc), class: "font-medium text-accent hover:opacity-80", data: { turbo_frame: "_top", turbo_prefetch: true }) } %>
    <% end %>
  </div>
</div>
