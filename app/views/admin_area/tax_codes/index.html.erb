<% content_for :title, "Tax codes" %>
<% content_for :breadcrumbs do %>
  <li><%= link_to "Dashboard", root_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li><%= link_to "Admin settings", admin_settings_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li aria-current="page" class="text-muted">Tax codes</li>
<% end %>

<div class="mx-auto max-w-6xl">
  <%= render "shared/page_header", title: "Tax codes" do %>
    <%= link_to "Add tax code", new_admin_tax_code_path,
        class: "inline-flex min-h-[30px] items-center justify-center bg-accent px-2.5 py-1 text-sm font-semibold text-[color:var(--color-page)] hover:bg-[var(--color-accent-hover)]",
        data: { turbo_prefetch: true } %>
  <% end %>

  <div class="mt-2 flex flex-col gap-2">
    <%= render "shared/table_filters",
        search_path: admin_tax_codes_path,
        turbo_frame: "tax_codes_table",
        label: "Search tax codes",
        placeholder: "Search tax codes…" %>

    <%= turbo_frame_tag "tax_codes_table" do %>
  <div class="overflow-x-auto border border-theme bg-surface lg:min-h-[70vh]">
    <table class="min-w-full divide-y divide-[var(--color-border)]">
      <thead class="bg-surface-alt">
        <tr>
          <th class="px-3 py-1 text-left text-xs font-medium uppercase tracking-wider text-muted">Code</th>
          <th class="px-3 py-1 text-left text-xs font-medium uppercase tracking-wider text-muted">Name</th>
          <th class="px-3 py-1 text-left text-xs font-medium uppercase tracking-wider text-muted">Rate</th>
          <th class="px-3 py-1 text-left text-xs font-medium uppercase tracking-wider text-muted">Created</th>
          <th class="px-3 py-1 text-right text-xs font-medium uppercase tracking-wider text-muted"></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-[var(--color-border)] bg-surface">
        <% @tax_codes.each do |tax_code| %>
          <tr>
            <td class="px-3 py-1.5 text-sm font-medium text-body">
              <%= link_to tax_code.code, admin_tax_code_path(tax_code), class: "text-accent hover:underline", data: { turbo_frame: "_top", turbo_prefetch: true } %>
            </td>
            <td class="px-3 py-1.5 text-sm text-body"><%= tax_code.name %></td>
            <td class="px-3 py-1.5 text-sm text-body"><%= number_to_percentage(tax_code.rate * 100, precision: 2) %></td>
            <td class="px-3 py-1.5 text-sm text-muted"><%= local_time(tax_code.created_at, format: :short) %></td>
            <td class="px-3 py-1.5 text-right text-sm">
              <%= link_to "Edit", edit_admin_tax_code_path(tax_code),
                  class: "font-medium text-accent hover:opacity-80",
                  data: { turbo_frame: "_top", turbo_prefetch: true } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @tax_codes.empty? %>
    <p class="mt-2 text-sm text-muted">No tax codes yet. Add one to get started.</p>
  <% end %>

  <%= render "shared/pagy_nav" %>
    <% end %>
  </div>
</div>
