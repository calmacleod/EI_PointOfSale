<aside class="w-full border-b border-slate-200 bg-white lg:w-64 lg:border-b-0 lg:border-r">
  <div class="flex items-center justify-between px-4 py-4 lg:px-6">
    <div class="flex items-center gap-3">
      <div class="flex h-9 w-9 items-center justify-center rounded-lg bg-slate-900 text-white">
        <span class="text-sm font-semibold">EI</span>
      </div>
      <div>
        <p class="text-sm font-semibold text-slate-900">Point of Sale</p>
        <p class="text-xs text-slate-500"><%= Current.user&.type %></p>
      </div>
    </div>
  </div>

  <nav class="px-2 pb-4 lg:px-3">
    <%= link_to root_path,
        class: [
          "flex items-center gap-3 rounded-lg px-3 py-2 text-sm font-medium",
          (current_page?(root_path) ? "bg-slate-900 text-white" : "text-slate-700 hover:bg-slate-50")
        ].join(" ") do %>
      <span>Dashboard</span>
    <% end %>

    <%= link_to users_path,
        class: [
          "mt-1 flex items-center gap-3 rounded-lg px-3 py-2 text-sm font-medium",
          (current_page?(users_path) ? "bg-slate-900 text-white" : "text-slate-700 hover:bg-slate-50")
        ].join(" ") do %>
      <span>Users</span>
    <% end %>

    <% if Current.user.is_a?(Admin) %>
      <%= link_to admin_settings_path,
          class: [
            "mt-1 flex items-center gap-3 rounded-lg px-3 py-2 text-sm font-medium",
            (current_page?(admin_settings_path) ? "bg-slate-900 text-white" : "text-slate-700 hover:bg-slate-50")
          ].join(" ") do %>
        <span>Admin settings</span>
      <% end %>
    <% end %>

    <%= link_to edit_profile_path,
        class: [
          "mt-1 flex items-center gap-3 rounded-lg px-3 py-2 text-sm font-medium",
          (current_page?(edit_profile_path) ? "bg-slate-900 text-white" : "text-slate-700 hover:bg-slate-50")
        ].join(" ") do %>
      <span>Profile</span>
    <% end %>

    <div class="mt-4 border-t border-slate-200 pt-4">
      <div class="px-3">
        <p class="text-xs font-medium text-slate-500">Signed in as</p>
        <p class="mt-1 truncate text-sm font-medium text-slate-900"><%= Current.user&.email_address %></p>
      </div>

      <div class="mt-3 px-3">
        <%= button_to "Sign out", session_path, method: :delete,
            class: "w-full rounded-md bg-slate-900 px-3 py-2 text-sm font-semibold text-white hover:bg-slate-800",
            form: { data: { turbo_confirm: "Sign out now?" } } %>
      </div>
    </div>
  </nav>
</aside>
