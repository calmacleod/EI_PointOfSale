<div data-confirm-modal-target="modal"
     class="confirm-modal-overlay fixed inset-0 z-[60] hidden"
     role="dialog"
     aria-modal="true"
     aria-labelledby="sign-out-modal-title">
  <div data-action="click->confirm-modal#close"
       class="fixed inset-0 bg-black/50"></div>
  <div class="fixed inset-0 flex items-start justify-center pt-[20vh] p-4 pointer-events-none">
    <div class="form-card w-full max-w-xs border border-theme bg-surface p-3 pointer-events-auto"
         role="document">
      <div class="cursor-default">
        <h2 id="sign-out-modal-title" class="text-sm font-semibold text-body">Sign out?</h2>
        <p class="mt-0.5 text-xs text-muted">Are you sure you want to sign out of your account?</p>
        <div class="mt-3 flex justify-end gap-2">
          <button type="button"
                  data-action="click->confirm-modal#close"
                  data-autofocus
                  class="border border-theme bg-surface px-2.5 py-1 text-sm font-medium text-body hover:bg-[var(--color-border)]">
            Cancel
          </button>
          <%= button_to session_path, method: :delete,
              class: "bg-accent px-2.5 py-1 text-sm font-medium text-[color:var(--color-page)] hover:bg-[var(--color-accent-hover)]" do %>
            Sign out
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
