<%= form_with model: product, class: "divide-y divide-[var(--color-border)]" do |f| %>
  <% if product.errors.any? %>
    <div class="rounded-t-lg bg-[var(--color-error-bg)] px-3 py-2">
      <p class="text-sm font-semibold text-[var(--color-error-text)]">Please fix the following:</p>
      <ul class="mt-1 list-disc space-y-0.5 pl-5 text-sm text-[var(--color-error-text)]">
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="px-3 py-2.5 space-y-2">
    <div>
      <%= f.label :name, class: "text-sm font-medium text-body" %>
      <%= f.text_field :name,
          placeholder: "Product name",
          class: "input-field min-h-[30px] w-full" %>
    </div>

    <div class="grid grid-cols-1 gap-2 sm:grid-cols-2">
      <div>
        <%= f.label :tax_code_id, "Tax code", class: "text-sm font-medium text-body" %>
        <%= f.collection_select :tax_code_id,
            TaxCode.kept.order(:code),
            :id,
            :code,
            { include_blank: "None" },
            class: "input-field min-h-[30px] w-full" %>
      </div>
      <div>
        <%= f.label :supplier_id, "Supplier", class: "text-sm font-medium text-body" %>
        <%= f.collection_select :supplier_id,
            Supplier.kept.order(:name),
            :id,
            :name,
            { include_blank: "None" },
            class: "input-field min-h-[30px] w-full" %>
      </div>
    </div>

    <div>
      <%= f.label :product_url, "Product URL", class: "text-sm font-medium text-body" %>
      <%= f.url_field :product_url,
          placeholder: "https://...",
          class: "input-field min-h-[30px] w-full" %>
    </div>
  </div>

  <div class="flex items-center justify-between px-3 py-2">
    <% if product.persisted? && can?(:destroy, product) %>
      <%= button_to "Remove", product_path(product), method: :delete,
          data: { turbo_confirm: "Remove this product and its variants?" },
          class: "inline-flex min-h-[30px] items-center justify-center rounded-md px-2.5 py-1 text-sm font-medium text-[var(--color-error-text)] hover:opacity-80" %>
    <% else %>
      <span></span>
    <% end %>
    <%= f.submit product.persisted? ? "Save changes" : "Create product",
        class: "inline-flex min-h-[30px] items-center justify-center rounded-md bg-accent px-2.5 py-1 text-sm font-medium text-[color:var(--color-page)] hover:bg-[var(--color-accent-hover)]" %>
  </div>
<% end %>
