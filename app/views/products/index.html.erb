<% content_for :title, "Products" %>
<% content_for :breadcrumbs do %>
  <li><%= link_to "Dashboard", root_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li aria-current="page" class="text-muted">Products</li>
<% end %>

<div class="mx-auto max-w-5xl">
  <%= render "shared/page_header", title: "Products" do %>
    <% if can? :create, Product %>
      <%= link_to "Add product", new_product_path,
          class: "inline-flex min-h-[44px] items-center justify-center rounded-lg bg-accent px-4 py-3 text-base font-semibold text-[color:var(--color-page)] shadow-sm hover:bg-[var(--color-accent-hover)]",
          data: { turbo_prefetch: true } %>
    <% end %>
  <% end %>

  <div class="mt-6 flex flex-col gap-4">
    <%= render "shared/table_filters",
        search_path: products_path,
        turbo_frame: "products_table",
        label: "Search products",
        placeholder: "Search products…",
        filter_params: %w[q supplier_id] do |f| %>
      <label for="products_table_supplier" class="sr-only">Supplier</label>
      <%= f.select :supplier_id,
          options_from_collection_for_select(@suppliers, :id, :name, params[:supplier_id]),
          { include_blank: "All suppliers" },
          {
            id: "products_table_supplier",
            class: "input-field min-h-[44px] w-48 cursor-pointer",
            data: { action: "change->table-search#handleChange" }
          } %>
    <% end %>

    <%= turbo_frame_tag "products_table" do %>
  <div class="overflow-x-auto rounded-lg border border-theme bg-surface">
    <table class="min-w-full divide-y divide-[var(--color-border)]">
      <thead class="bg-[var(--color-border)]/30">
        <tr>
          <th class="px-4 py-3 text-left text-base font-medium uppercase tracking-wider text-muted">Product</th>
          <th class="px-4 py-3 text-left text-base font-medium uppercase tracking-wider text-muted">Tax</th>
          <th class="px-4 py-3 text-left text-base font-medium uppercase tracking-wider text-muted">Supplier</th>
          <th class="px-4 py-3 text-left text-base font-medium uppercase tracking-wider text-muted">Variants</th>
          <th class="px-4 py-3 text-left text-base font-medium uppercase tracking-wider text-muted">Created</th>
          <th class="px-4 py-3 text-right text-base font-medium uppercase tracking-wider text-muted"></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-[var(--color-border)] bg-surface">
        <% @products.each do |product| %>
          <tr>
            <td class="px-4 py-3 text-base font-medium text-body">
              <% if can? :read, product %>
                <%= link_to product.name, product_path(product), class: "text-accent hover:underline", data: { turbo_frame: "_top", turbo_prefetch: true } %>
              <% else %>
                <%= product.name %>
              <% end %>
            </td>
            <td class="px-4 py-3 text-base text-body"><%= product.tax_code&.code || "—" %></td>
            <td class="px-4 py-3 text-base text-body"><%= product.supplier&.name || "—" %></td>
            <td class="px-4 py-3 text-base text-body"><%= product.variants.kept.count %></td>
            <td class="px-4 py-3 text-base text-body text-muted"><%= local_time(product.created_at, format: :short) %></td>
            <td class="px-4 py-3 text-right text-base">
              <% if can? :update, product %>
                <%= link_to "Edit", edit_product_path(product),
                    class: "inline-flex items-center px-3 py-2 font-medium text-accent hover:opacity-80 rounded",
                    data: { turbo_frame: "_top", turbo_prefetch: true } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @products.empty? %>
    <p class="mt-4 text-base text-muted">No products yet. Add one to get started.</p>
  <% end %>

  <%= render "shared/pagy_nav" %>
    <% end %>
  </div>
</div>
