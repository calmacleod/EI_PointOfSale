<% content_for :title, "Products" %>
<% content_for :breadcrumbs do %>
  <li><%= link_to "Dashboard", root_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li aria-current="page" class="text-muted">Products</li>
<% end %>

<div class="lg:flex lg:min-h-0 lg:flex-1 lg:flex-col">
  <%= render "shared/page_header", title: "Products" do %>
    <% if can? :create, Product %>
      <%= link_to "Add product", new_product_path,
          class: "inline-flex min-h-[30px] items-center justify-center rounded-md bg-accent px-2.5 py-1 text-sm font-semibold text-[color:var(--color-page)] hover:bg-[var(--color-accent-hover)]",
          data: { turbo_prefetch: true } %>
    <% end %>
  <% end %>

  <div class="mt-2 flex flex-col gap-2 lg:min-h-0 lg:flex-1">
    <%= render "shared/filter_bar", config: @filter_config, saved_queries: @saved_queries %>

    <%= render "shared/data_table", config: @filter_config, records: @products, pagy: @pagy,
               empty_message: "No products yet. Add one to get started." do |t| %>
      <% t.cell(:code) { |product| link_to product.code, product_path(product), class: "font-mono text-accent hover:underline", data: { turbo_frame: "_top", turbo_prefetch: true } } %>
      <% t.cell(:name) { |product| link_to product.name, product_path(product), class: "font-medium text-accent hover:underline", data: { turbo_frame: "_top", turbo_prefetch: true } } %>
      <% t.cell(:selling_price) { |product| number_to_currency(product.selling_price) || "—" } %>
      <% t.cell(:stock_level) { |product| product.stock_level } %>
      <% t.cell(:supplier) { |product| product.supplier&.name || "—" } %>
      <% t.cell(:tax_code) { |product| product.tax_code&.code || "—" } %>
      <% t.cell(:purchase_price) { |product| number_to_currency(product.purchase_price) || "—" } %>
      <% t.cell(:reorder_level) { |product| product.reorder_level } %>
      <% t.cell(:product_group) { |product| product.product_group&.name || "—" } %>
      <% t.cell(:sync_to_shopify) { |product| product.sync_to_shopify? ? "Yes" : "No" } %>
      <% t.cell(:created_at) { |product| local_time(product.created_at, format: :short) } %>
      <% t.cell(:updated_at) { |product| local_time(product.updated_at, format: :short) } %>
      <% t.cell(:actions) { |product| can?(:update, product) ? link_to("Edit", edit_product_path(product), class: "font-medium text-accent hover:opacity-80", data: { turbo_frame: "_top", turbo_prefetch: true }) : nil } %>
    <% end %>
  </div>
</div>
