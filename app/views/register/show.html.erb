<% content_for :full_bleed, true %>

<div class="flex flex-1 min-h-0 flex-col overflow-hidden" data-controller="order-form item-preview cancel-order" data-order-form-order-id-value="<%= @order.id %>">
  <%# ── Tab bar ─────────────────────────────────────────────────────── %>
  <div class="flex items-center gap-1 border-b border-theme bg-surface-alt px-3 py-1 overflow-x-auto select-none shrink-0"
       data-controller="tab-reorder"
       data-tab-reorder-current-order-id-value="<%= @order.id %>">
    <% @active_orders.each do |o| %>
      <% is_current = o.id == @order.id %>
      <div class="group/tab inline-flex items-center gap-0.5 rounded-md text-xs font-medium transition cursor-grab active:cursor-grabbing
                  <%= is_current ? 'bg-accent text-white' : 'text-muted hover:bg-[var(--color-border)] hover:text-body' %>"
           draggable="true"
           data-tab-reorder-target="tab"
           data-order-id="<%= o.id %>"
           data-action="dragstart->tab-reorder#dragstart dragover->tab-reorder#dragover drop->tab-reorder#drop dragend->tab-reorder#dragend">
        <%= link_to register_path(order_id: o.id),
            draggable: false,
            class: "inline-flex items-center gap-1.5 pl-3 pr-1 py-1" do %>
          <span><%= o.number %></span>
          <% if o.customer.present? %>
            <span class="text-[10px] opacity-70 max-w-[6rem] truncate"><%= o.customer.name %></span>
          <% end %>
          <% if o.held? %>
            <span class="inline-block h-1.5 w-1.5 rounded-full bg-yellow-400" title="On hold"></span>
          <% end %>
          <span class="text-[10px] opacity-50">(<%= o.order_lines.size %>)</span>
        <% end %>
        <%# X button — draft: cancel (styled confirm). Held: close tab (navigate away, order stays in Held). %>
        <% if o.draft? %>
          <button type="button"
                  class="inline-flex items-center justify-center h-5 w-5 rounded mr-0.5 transition
                         <%= is_current ? 'hover:bg-white/20' : 'opacity-0 group-hover/tab:opacity-100 hover:bg-[var(--color-border)]' %>"
                  title="Cancel order"
                  data-action="click->cancel-order#open"
                  data-order-number="<%= o.number %>"
                  data-cancel-path="<%= cancel_order_path(o) %>">
            <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
          </button>
        <% elsif o.held? %>
          <button type="button"
                  class="inline-flex items-center justify-center h-5 w-5 rounded mr-0.5 transition shrink-0
                         <%= is_current ? 'hover:bg-white/20' : 'opacity-0 group-hover/tab:opacity-100 hover:bg-[var(--color-border)]' %>"
                  title="Close tab (order stays in Held)"
                  data-action="click->tab-reorder#dismiss"
                  data-navigate-path="<%= register_path %>">
            <svg class="h-3 w-3 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
          </button>
        <% end %>
      </div>
    <% end %>
    <%= button_to new_order_register_path, method: :post, class: "inline-flex items-center gap-1 rounded-md px-2.5 py-1 text-xs font-medium text-muted hover:bg-[var(--color-border)] hover:text-body" do %>
      <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
      New
    <% end %>
    <% held_count = Order.held.count %>
    <% if held_count > 0 %>
      <%= link_to held_orders_path, class: "ml-auto inline-flex items-center gap-1 rounded-md px-2.5 py-1 text-xs font-medium text-muted hover:bg-[var(--color-border)] hover:text-body" do %>
        Held
        <span class="rounded-full bg-yellow-100 px-1.5 py-0.5 text-[10px] font-bold text-yellow-800"><%= held_count %></span>
      <% end %>
    <% end %>
  </div>

  <%# ── Order status bar ────────────────────────────────────────────── %>
  <div class="flex items-center justify-between border-b border-theme bg-surface px-4 py-1.5 shrink-0">
    <div class="flex items-center gap-3">
      <h1 class="text-sm font-semibold text-body"><%= @order.number %></h1>
      <span class="rounded-full px-2 py-0.5 text-[10px] font-medium
        <%= case @order.status
            when 'draft' then 'bg-blue-100 text-blue-800'
            when 'held' then 'bg-yellow-100 text-yellow-800'
            when 'completed' then 'bg-green-100 text-green-800'
            else 'bg-gray-100 text-gray-800'
            end %>">
        <%= @order.display_status %>
      </span>
    </div>
    <div class="flex items-center gap-3">
      <span class="text-xs text-muted"><%= @order.created_by.name || @order.created_by.email_address %></span>
      <% if @order.draft? || @order.held? %>
        <button type="button"
                class="text-xs text-muted hover:text-red-500 transition"
                data-action="click->cancel-order#open"
                data-order-number="<%= @order.number %>"
                data-cancel-path="<%= cancel_order_path(@order) %>">
          <svg class="inline h-3.5 w-3.5 mr-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
          Cancel
        </button>
      <% end %>
    </div>
  </div>

  <%# ── Main two-column layout ──────────────────────────────────────── %>
  <div class="flex flex-1 min-h-0 overflow-hidden">
    <%# Left column: line items (scrollable) + code input pinned at bottom %>
    <div class="flex flex-1 flex-col overflow-hidden border-r border-theme">
      <%# Line items — scrollable area %>
      <div class="flex-1 min-h-0 overflow-y-auto p-3">
        <%= render "orders/line_items", order: @order %>
      </div>

      <%# Code lookup bar — pinned at bottom %>
      <div class="shrink-0 border-t border-theme bg-surface px-4 py-2">
        <div id="lookup_flash" class="mb-1 min-h-[1rem] text-xs"></div>
        <%= form_with url: quick_lookup_orders_path, method: :post, data: { turbo_stream: true, action: "submit->order-form#handleLookup" } do |f| %>
          <%= f.hidden_field :order_id, value: @order.id %>
          <div class="flex gap-2">
            <div class="relative flex-1">
              <input type="text" name="code" id="code_lookup_input" autocomplete="off"
                     class="input-field w-full text-sm"
                     style="padding-left: 2.25rem;"
                     placeholder="Scan barcode or type product code..."
                     data-order-form-target="codeInput"
                     data-action="keydown->order-form#handleCodeKeydown"
                     autofocus>
              <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-2.5">
                <svg class="h-4 w-4 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7V4h3M4 17v3h3M20 7V4h-3M20 17v3h-3M7 10v4M12 8v8M17 10v4"/></svg>
              </div>
            </div>
            <button type="submit" class="rounded-lg bg-accent px-4 py-2 text-xs font-medium text-white hover:bg-[var(--color-accent-hover)] transition">
              Add
            </button>
            <button type="button" class="rounded-lg border border-theme px-3 py-2 text-xs font-medium text-muted hover:bg-[var(--color-border)] transition"
                    data-action="click->order-form#openSearch">
              Search
            </button>
          </div>
        <% end %>
      </div>
    </div>

    <%# Right column: customer, discounts, totals, payments, actions %>
    <div class="flex w-80 min-h-0 flex-col bg-surface-alt">
      <%# Scrollable panel area %>
      <div class="flex-1 min-h-0 overflow-y-auto">
        <%# Customer panel — partial includes id="order_customer_panel" %>
        <%= render "orders/customer_panel", order: @order %>

        <%# Discounts panel — partial includes id="order_discounts_panel" %>
        <%= render "orders/discounts_panel", order: @order %>

        <%# Totals panel — partial includes id="order_totals" %>
        <%= render "orders/totals_panel", order: @order %>

        <%# Payments panel — partial includes id="order_payments_panel" %>
        <%= render "orders/payments_panel", order: @order %>
      </div>

      <%# Action buttons — pinned at bottom %>
      <%= render "register/action_buttons", order: @order %>
    </div>
  </div>

  <%# ── Customer search modal ──────────────────────────────────── %>
  <div id="customer_search_modal" class="fixed inset-0 z-50 hidden" role="dialog"
       data-controller="customer-search"
       data-customer-search-order-id-value="<%= @order.id %>">
    <div class="fixed inset-0 bg-black/50" data-action="click->customer-search#close"></div>
    <div class="fixed inset-0 flex items-start justify-center pt-[10vh]" style="pointer-events: none;">
      <div class="w-full max-w-2xl rounded-xl bg-surface shadow-2xl overflow-hidden" style="pointer-events: auto; max-height: 70vh;">
        <%= form_with url: search_customers_path, method: :get,
              data: { turbo_stream: true, customer_search_target: "form",
                      action: "turbo:submit-end->customer-search#onResultsLoaded" },
              class: "contents" do |f| %>
          <%# Search header %>
          <div class="flex items-center gap-3 border-b border-theme px-4 py-3">
            <svg class="h-5 w-5 shrink-0 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/></svg>
            <%= f.text_field :q, class: "flex-1 bg-transparent text-sm text-body outline-none placeholder:text-muted",
                  autocomplete: "off", placeholder: "Search by name, phone, email, or member #...",
                  data: { customer_search_target: "input",
                          action: "input->customer-search#search keydown->customer-search#navigate" } %>
            <kbd class="rounded border border-theme px-1.5 py-0.5 text-[10px] text-muted">ESC</kbd>
          </div>
          <%# Filter pills %>
          <div class="flex items-center gap-1.5 border-b border-theme px-4 py-2 bg-surface-alt" data-customer-search-target="filterBar">
            <%= f.hidden_field :filter, value: "all", data: { customer_search_target: "filterInput" } %>
            <button type="button" class="rounded-full px-2.5 py-0.5 text-[11px] font-medium transition bg-accent text-white"
                    data-action="click->customer-search#setFilter" data-filter="all">All</button>
            <button type="button" class="rounded-full px-2.5 py-0.5 text-[11px] font-medium transition text-muted hover:bg-[var(--color-border)]"
                    data-action="click->customer-search#setFilter" data-filter="active">Active</button>
            <button type="button" class="rounded-full px-2.5 py-0.5 text-[11px] font-medium transition text-muted hover:bg-[var(--color-border)]"
                    data-action="click->customer-search#setFilter" data-filter="tax_exempt">Tax Exempt</button>
          </div>
        <% end %>
        <%# Results %>
        <div id="customer_search_results" class="overflow-y-auto" style="max-height: calc(70vh - 6.5rem);" data-customer-search-target="results">
          <div class="p-6 text-center text-sm text-muted">Type to search for customers</div>
        </div>
      </div>
    </div>
  </div>

  <%# ── Item preview modal (triggered from cart line items) ──────── %>
  <div id="item_preview_modal" class="fixed inset-0 z-[60] hidden" role="dialog"
       data-item-preview-target="modal">
    <div class="fixed inset-0 bg-black/40" data-action="click->item-preview#close"></div>
    <div class="fixed inset-0 flex items-center justify-center p-8">
      <div class="w-full max-w-md rounded-xl bg-surface shadow-2xl overflow-hidden">
        <div class="flex items-center justify-between border-b border-theme px-5 py-3">
          <h3 class="text-sm font-semibold text-body" data-item-preview-target="title">Item Preview</h3>
          <button type="button" class="text-muted hover:text-body transition" data-action="click->item-preview#close">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
          </button>
        </div>
        <div class="max-h-[60vh] overflow-y-auto" data-item-preview-target="content">
          <div class="p-6 text-center text-sm text-muted">Loading...</div>
        </div>
      </div>
    </div>
  </div>

  <%# ── Cancel order confirm modal ─────────────────────────────── %>
  <div data-cancel-order-target="modal"
       class="fixed inset-0 z-[70] hidden" role="dialog" aria-modal="true">
    <div class="fixed inset-0 bg-black/50" data-action="click->cancel-order#close"></div>
    <div class="fixed inset-0 flex items-start justify-center pt-[22vh] p-4" style="pointer-events: none;">
      <div class="w-full max-w-sm rounded-xl border border-red-200 bg-surface shadow-2xl overflow-hidden" style="pointer-events: auto;">
        <div class="bg-red-50 px-5 py-4">
          <div class="flex items-start gap-3">
            <div class="flex h-8 w-8 shrink-0 items-center justify-center rounded-full bg-red-100">
              <svg class="h-4 w-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/></svg>
            </div>
            <div>
              <h3 class="text-sm font-semibold text-red-900">Cancel order?</h3>
              <p class="mt-1 text-xs text-red-700">
                This will permanently cancel order
                <strong data-cancel-order-target="orderNumber" class="font-semibold"></strong>.
                All line items, payments, and discounts will be voided. This action cannot be undone.
              </p>
            </div>
          </div>
        </div>
        <div class="flex justify-end gap-2 border-t border-red-200 bg-surface px-5 py-3">
          <button type="button"
                  data-action="click->cancel-order#close"
                  data-autofocus
                  class="rounded-lg border border-theme px-3.5 py-1.5 text-xs font-medium text-body hover:bg-[var(--color-border)] transition">
            Keep Order
          </button>
          <form data-cancel-order-target="form" method="post">
            <input type="hidden" name="_method" value="delete">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <button type="submit"
                    class="rounded-lg bg-red-600 px-3.5 py-1.5 text-xs font-semibold text-white hover:bg-red-700 transition">
              Cancel Order
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <%# ── Product search modal (split-pane: results left, preview right) %>
  <div id="product_search_modal" class="fixed inset-0 z-50 hidden" role="dialog"
       data-controller="product-search"
       data-product-search-order-id-value="<%= @order.id %>">
    <div class="fixed inset-0 bg-black/50" data-action="click->product-search#close"></div>
    <div class="fixed inset-0 flex items-start justify-center pt-[5vh]" style="pointer-events: none;">
      <div class="flex w-full max-w-5xl rounded-xl bg-surface shadow-2xl overflow-hidden" style="pointer-events: auto; height: 70vh;">
        <%# Left pane: search + filters + results list %>
        <div class="flex w-1/2 flex-col border-r border-theme">
          <div class="flex items-center gap-3 border-b border-theme px-4 py-3 shrink-0">
            <svg class="h-5 w-5 shrink-0 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
            <input type="text" class="flex-1 bg-transparent text-sm text-body outline-none placeholder:text-muted"
                   autocomplete="off"
                   placeholder="Search products and services..."
                   data-product-search-target="input"
                   data-action="input->product-search#search keydown->product-search#navigate">
            <kbd class="rounded border border-theme px-1.5 py-0.5 text-[10px] text-muted">ESC</kbd>
          </div>
          <%# Filter pills %>
          <div class="flex items-center gap-1.5 border-b border-theme px-4 py-2 bg-surface-alt shrink-0" data-product-search-target="filterBar">
            <button type="button" class="rounded-full px-2.5 py-0.5 text-[11px] font-medium transition bg-accent text-white"
                    data-action="click->product-search#setFilter" data-filter="all">All</button>
            <button type="button" class="rounded-full px-2.5 py-0.5 text-[11px] font-medium transition text-muted hover:bg-[var(--color-border)]"
                    data-action="click->product-search#setFilter" data-filter="Product">Products</button>
            <button type="button" class="rounded-full px-2.5 py-0.5 text-[11px] font-medium transition text-muted hover:bg-[var(--color-border)]"
                    data-action="click->product-search#setFilter" data-filter="Service">Services</button>
          </div>
          <div class="flex-1 overflow-y-auto" data-product-search-target="results">
            <div class="p-6 text-center text-sm text-muted">Type to search for products or services</div>
          </div>
        </div>

        <%# Right pane: preview %>
        <div class="flex w-1/2 flex-col">
          <div class="flex items-center border-b border-theme px-4 py-3 shrink-0">
            <h3 class="text-xs font-semibold uppercase tracking-wider text-muted">Preview</h3>
          </div>
          <div class="flex-1 overflow-y-auto" data-product-search-target="preview">
            <div class="flex h-full items-center justify-center p-6">
              <div class="text-center">
                <svg class="mx-auto h-10 w-10 text-muted opacity-30" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/></svg>
                <p class="mt-2 text-xs text-muted">Select an item to preview</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
