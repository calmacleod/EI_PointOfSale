<% content_for :title, "Services" %>
<% content_for :breadcrumbs do %>
  <li><%= link_to "Dashboard", root_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li aria-current="page" class="text-muted">Services</li>
<% end %>

<div class="mx-auto max-w-5xl">
  <%= render "shared/page_header", title: "Services" do %>
    <% if can? :create, Service %>
      <%= link_to "Add service", new_service_path,
          class: "inline-flex min-h-[44px] items-center justify-center rounded-lg bg-accent px-4 py-3 text-base font-semibold text-[color:var(--color-page)] shadow-sm hover:bg-[var(--color-accent-hover)]",
          data: { turbo_prefetch: true } %>
    <% end %>
  <% end %>

  <div class="mt-6 flex flex-col gap-4">
    <%= render "shared/table_filters",
        search_path: services_path,
        turbo_frame: "services_table",
        label: "Search services",
        placeholder: "Search services…" %>

    <%= turbo_frame_tag "services_table" do %>
  <div class="overflow-x-auto rounded-lg border border-theme bg-surface">
    <table class="min-w-full divide-y divide-[var(--color-border)]">
      <thead class="bg-[var(--color-border)]/30">
        <tr>
          <th class="px-4 py-3 text-left text-base font-medium uppercase tracking-wider text-muted">Service</th>
          <th class="px-4 py-3 text-left text-base font-medium uppercase tracking-wider text-muted">Code</th>
          <th class="px-4 py-3 text-left text-base font-medium uppercase tracking-wider text-muted">Price</th>
          <th class="px-4 py-3 text-left text-base font-medium uppercase tracking-wider text-muted">Tax</th>
          <th class="px-4 py-3 text-left text-base font-medium uppercase tracking-wider text-muted">Created</th>
          <th class="px-4 py-3 text-right text-base font-medium uppercase tracking-wider text-muted"></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-[var(--color-border)] bg-surface">
        <% @services.each do |service| %>
          <tr>
            <td class="px-4 py-3 text-base font-medium text-body">
              <% if can? :read, service %>
                <%= link_to service.name, service_path(service), class: "text-accent hover:underline", data: { turbo_frame: "_top", turbo_prefetch: true } %>
              <% else %>
                <%= service.name %>
              <% end %>
            </td>
            <td class="px-4 py-3 text-base text-body"><%= service.code.presence || "—" %></td>
            <td class="px-4 py-3 text-base text-body"><%= number_to_currency(service.price) %></td>
            <td class="px-4 py-3 text-base text-body"><%= service.tax_code&.code || "—" %></td>
            <td class="px-4 py-3 text-base text-body text-muted"><%= l(service.created_at, format: :short) %></td>
            <td class="px-4 py-3 text-right text-base">
              <% if can? :update, service %>
                <%= link_to "Edit", edit_service_path(service),
                    class: "inline-flex items-center px-3 py-2 font-medium text-accent hover:opacity-80 rounded",
                    data: { turbo_frame: "_top", turbo_prefetch: true } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @services.empty? %>
    <p class="mt-4 text-base text-muted">No services yet. Add one to get started.</p>
  <% end %>

  <%= render "shared/pagy_nav" %>
    <% end %>
  </div>
</div>
