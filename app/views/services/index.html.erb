<% content_for :title, "Services" %>
<% content_for :breadcrumbs do %>
  <li><%= link_to "Dashboard", root_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li aria-current="page" class="text-muted">Services</li>
<% end %>

<div class="lg:flex lg:min-h-0 lg:flex-1 lg:flex-col">
  <%= render "shared/page_header", title: "Services" do %>
    <% if can? :create, Service %>
      <%= link_to "Add service", new_service_path,
          class: "inline-flex min-h-[30px] items-center justify-center rounded-md bg-accent px-2.5 py-1 text-sm font-semibold text-[color:var(--color-page)] hover:bg-[var(--color-accent-hover)]",
          data: { turbo_prefetch: true } %>
    <% end %>
  <% end %>

  <div class="mt-2 flex flex-col gap-2 lg:min-h-0 lg:flex-1">
    <%= render "shared/table_filters",
        search_path: services_path,
        turbo_frame: "services_table",
        label: "Search services",
        placeholder: "Search services…" %>

    <%= turbo_frame_tag "services_table", class: "lg:flex lg:min-h-0 lg:flex-1 lg:flex-col" do %>
  <div class="overflow-x-auto rounded-lg border border-theme bg-surface lg:flex-1 lg:overflow-y-auto">
    <table class="min-w-full divide-y divide-[var(--color-border)]">
      <thead class="bg-surface-alt lg:sticky lg:top-0 lg:z-10">
        <tr>
          <th class="px-3 py-1 text-left text-xs font-medium uppercase tracking-wider text-muted"><%= sort_link "Service", :name %></th>
          <th class="px-3 py-1 text-left text-xs font-medium uppercase tracking-wider text-muted"><%= sort_link "Code", :code %></th>
          <th class="px-3 py-1 text-left text-xs font-medium uppercase tracking-wider text-muted"><%= sort_link "Price", :price %></th>
          <th class="px-3 py-1 text-left text-xs font-medium uppercase tracking-wider text-muted">Tax</th>
          <th class="px-3 py-1 text-left text-xs font-medium uppercase tracking-wider text-muted"><%= sort_link "Created", :created_at %></th>
          <th class="px-3 py-1 text-right text-xs font-medium uppercase tracking-wider text-muted"></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-[var(--color-border)] bg-surface">
        <% @services.each do |service| %>
          <tr>
            <td class="px-3 py-1.5 text-sm font-medium text-body">
              <% if can? :read, service %>
                <%= link_to service.name, service_path(service), class: "text-accent hover:underline", data: { turbo_frame: "_top", turbo_prefetch: true } %>
              <% else %>
                <%= service.name %>
              <% end %>
            </td>
            <td class="px-3 py-1.5 text-sm text-body"><%= service.code.presence || "—" %></td>
            <td class="px-3 py-1.5 text-sm text-body"><%= number_to_currency(service.price) %></td>
            <td class="px-3 py-1.5 text-sm text-body"><%= service.tax_code&.code || "—" %></td>
            <td class="px-3 py-1.5 text-sm text-muted"><%= local_time(service.created_at, format: :short) %></td>
            <td class="px-3 py-1.5 text-right text-sm">
              <% if can? :update, service %>
                <%= link_to "Edit", edit_service_path(service),
                    class: "font-medium text-accent hover:opacity-80",
                    data: { turbo_frame: "_top", turbo_prefetch: true } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @services.empty? %>
    <p class="mt-2 text-sm text-muted">No services yet. Add one to get started.</p>
  <% end %>

  <%= render "shared/pagy_nav" %>
    <% end %>
  </div>
</div>
