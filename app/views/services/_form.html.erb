<%= form_with model: service, class: "divide-y divide-[var(--color-border)]" do |f| %>
  <% if service.errors.any? %>
    <div class="rounded-t-lg bg-[var(--color-error-bg)] px-3 py-2">
      <p class="text-sm font-semibold text-[var(--color-error-text)]">Please fix the following:</p>
      <ul class="mt-1 list-disc space-y-0.5 pl-5 text-sm text-[var(--color-error-text)]">
        <% service.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="px-3 py-2.5 space-y-2">
    <div class="grid grid-cols-1 gap-2 sm:grid-cols-2">
      <div>
        <%= f.label :name, class: "text-sm font-medium text-body" %>
        <%= f.text_field :name,
            placeholder: "Service name",
            class: "input-field min-h-[30px] w-full" %>
      </div>
      <div>
        <%= f.label :code, class: "text-sm font-medium text-body" %>
        <%= f.text_field :code,
            placeholder: "e.g. SVC-001 (optional)",
            class: "input-field min-h-[30px] w-full" %>
      </div>
    </div>

    <div>
      <%= f.label :description, class: "text-sm font-medium text-body" %>
      <%= f.text_area :description, rows: 3,
          placeholder: "Optional description",
          class: "input-field w-full" %>
    </div>

    <div class="grid grid-cols-1 gap-2 sm:grid-cols-2">
      <div>
        <%= f.label :price, class: "text-sm font-medium text-body" %>
        <%= f.number_field :price,
            step: 0.01,
            min: 0,
            placeholder: "0.00",
            class: "input-field min-h-[30px] w-full" %>
      </div>
      <div>
        <%= f.label :tax_code_id, "Tax code", class: "text-sm font-medium text-body" %>
        <%= f.collection_select :tax_code_id,
            TaxCode.kept.order(:code),
            :id,
            :code,
            { include_blank: "None" },
            class: "input-field min-h-[30px] w-full" %>
      </div>
    </div>
  </div>

  <div class="flex items-center justify-between px-3 py-2">
    <% if service.persisted? && can?(:destroy, service) %>
      <%= button_to "Remove", service_path(service), method: :delete,
          data: { turbo_confirm: "Remove this service?" },
          class: "inline-flex min-h-[30px] items-center justify-center rounded-md px-2.5 py-1 text-sm font-medium text-[var(--color-error-text)] hover:opacity-80" %>
    <% else %>
      <span></span>
    <% end %>
    <%= f.submit service.persisted? ? "Save changes" : "Create service",
        class: "inline-flex min-h-[30px] items-center justify-center rounded-md bg-accent px-2.5 py-1 text-sm font-medium text-[color:var(--color-page)] hover:bg-[var(--color-accent-hover)]" %>
  </div>
<% end %>
