<%= form_with model: service, class: "divide-y divide-[var(--color-border)]" do |f| %>
  <% if service.errors.any? %>
    <div class="bg-[var(--color-error-bg)] px-6 py-4">
      <p class="text-base font-semibold text-[var(--color-error-text)]">Please fix the following:</p>
      <ul class="mt-2 list-disc space-y-1 pl-5 text-base text-[var(--color-error-text)]">
        <% service.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="px-6 py-5 space-y-4">
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
      <div>
        <%= f.label :name, class: "block text-base font-medium text-body" %>
        <%= f.text_field :name,
            placeholder: "Service name",
            class: "input-field mt-1 block w-full min-h-[44px]" %>
      </div>
      <div>
        <%= f.label :code, class: "block text-base font-medium text-body" %>
        <%= f.text_field :code,
            placeholder: "e.g. SVC-001 (optional)",
            class: "input-field mt-1 block w-full min-h-[44px]" %>
      </div>
    </div>

    <div>
      <%= f.label :description, class: "block text-base font-medium text-body" %>
      <%= f.text_area :description, rows: 3,
          placeholder: "Optional description",
          class: "input-field mt-1 block w-full" %>
    </div>

    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
      <div>
        <%= f.label :price, class: "block text-base font-medium text-body" %>
        <%= f.number_field :price,
            step: 0.01,
            min: 0,
            placeholder: "0.00",
            class: "input-field mt-1 block w-full min-h-[44px]" %>
      </div>
      <div>
        <%= f.label :tax_code_id, "Tax code", class: "block text-base font-medium text-body" %>
        <%= f.collection_select :tax_code_id,
            TaxCode.kept.order(:code),
            :id,
            :code,
            { include_blank: "None" },
            class: "input-field mt-1 block w-full min-h-[44px]" %>
      </div>
    </div>
  </div>

  <div class="flex items-center justify-between bg-surface px-6 py-4">
    <% if service.persisted? && can?(:destroy, service) %>
      <%= button_to "Remove", service_path(service), method: :delete,
          data: { turbo_confirm: "Remove this service?" },
          class: "text-base font-medium text-[var(--color-error-text)] hover:opacity-80" %>
    <% else %>
      <span></span>
    <% end %>
    <%= f.submit service.persisted? ? "Save changes" : "Create service",
        class: "inline-flex min-h-[44px] items-center justify-center rounded-lg bg-accent px-4 py-3 text-base font-semibold text-[color:var(--color-page)] shadow-sm hover:bg-[var(--color-accent-hover)]" %>
  </div>
<% end %>
