<% content_for :title, @service.name %>
<% content_for :breadcrumbs do %>
  <li><%= link_to "Dashboard", root_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li><%= link_to "Services", services_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li aria-current="page" class="text-muted"><%= @service.name %></li>
<% end %>

<div class="mx-auto max-w-2xl">
  <%= render "shared/page_header", title: @service.name, description: "Service details and pricing." do %>
    <div class="flex items-center gap-2">
      <%= link_to "Back to services", services_path, class: "inline-flex min-h-[44px] items-center justify-center rounded-lg border border-theme bg-surface px-4 py-3 text-base font-semibold text-body hover:bg-[var(--color-border)]/30", data: { turbo_prefetch: true } %>
      <% if can? :update, @service %>
        <%= link_to "Edit", edit_service_path(@service),
            class: "inline-flex min-h-[44px] items-center justify-center rounded-lg bg-accent px-4 py-3 text-base font-semibold text-[color:var(--color-page)] shadow-sm hover:bg-[var(--color-accent-hover)]",
            data: { turbo_prefetch: true } %>
      <% end %>
    </div>
  <% end %>

  <section class="mt-6 overflow-hidden rounded-xl border border-theme bg-surface shadow-sm" aria-labelledby="service-details-heading">
    <div class="border-b border-theme bg-[var(--color-border)]/20 px-6 py-3">
      <h2 id="service-details-heading" class="text-base font-semibold text-body">Details</h2>
      <p class="mt-0.5 text-sm text-muted">Service information and pricing</p>
    </div>
    <dl class="divide-y divide-[var(--color-border)]">
      <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-muted">Name</dt>
        <dd class="mt-1 text-base text-body sm:col-span-2 sm:mt-0"><%= @service.name %></dd>
      </div>
      <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-muted">Code</dt>
        <dd class="mt-1 text-base text-body sm:col-span-2 sm:mt-0"><%= @service.code.presence || "—" %></dd>
      </div>
      <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-muted">Price</dt>
        <dd class="mt-1 text-base text-body sm:col-span-2 sm:mt-0"><%= number_to_currency(@service.price) %></dd>
      </div>
      <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-muted">Tax code</dt>
        <dd class="mt-1 text-base text-body sm:col-span-2 sm:mt-0"><%= @service.tax_code&.code || "—" %></dd>
      </div>
      <% if @service.categories.any? %>
        <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-muted">Categories</dt>
          <dd class="mt-1 text-base text-body sm:col-span-2 sm:mt-0"><%= @service.categories.pluck(:name).join(", ") %></dd>
        </div>
      <% end %>
      <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-muted">Description</dt>
        <dd class="mt-1 text-base text-body sm:col-span-2 sm:mt-0"><%= @service.description.present? ? simple_format(@service.description) : "—" %></dd>
      </div>
      <% if @service.added_by.present? %>
        <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-muted">Added by</dt>
          <dd class="mt-1 text-base text-body sm:col-span-2 sm:mt-0"><%= @service.added_by.email_address %></dd>
        </div>
      <% end %>
    </dl>
  </section>

  <section class="mt-6 overflow-hidden rounded-xl border border-theme bg-surface shadow-sm" aria-labelledby="service-meta-heading">
    <div class="border-b border-theme bg-[var(--color-border)]/20 px-6 py-3">
      <h2 id="service-meta-heading" class="text-base font-semibold text-body">Record info</h2>
      <p class="mt-0.5 text-sm text-muted">Timestamps</p>
    </div>
    <dl class="divide-y divide-[var(--color-border)]">
      <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-muted">Created</dt>
        <dd class="mt-1 text-base text-body sm:col-span-2 sm:mt-0"><%= @service.created_at.strftime("%b %-d, %Y at %-I:%M %p") %></dd>
      </div>
      <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-muted">Last updated</dt>
        <dd class="mt-1 text-base text-body sm:col-span-2 sm:mt-0"><%= @service.updated_at.strftime("%b %-d, %Y at %-I:%M %p") %></dd>
      </div>
    </dl>
  </section>

  <%= render "shared/audit_trail", auditable: @service %>
</div>
