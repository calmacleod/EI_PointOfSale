<% content_for :title, "#{@product_variant.code} – #{@product.name}" %>
<% content_for :breadcrumbs do %>
  <li><%= link_to "Dashboard", root_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li><%= link_to "Products", products_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li><%= link_to @product.name, product_path(@product), class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li aria-current="page" class="text-muted"><%= @product_variant.code %></li>
<% end %>

<div>
  <%= render "shared/page_header", title: "#{@product_variant.code} – #{@product.name}", description: "Variant details, pricing, and inventory." do %>
    <div class="flex items-center gap-1.5">
      <%= link_to "Back to product", product_path(@product), class: "inline-flex min-h-[30px] items-center justify-center rounded-md border border-theme bg-surface px-2.5 py-1 text-sm font-semibold text-body hover:bg-[var(--color-border)]/30", data: { turbo_prefetch: true } %>
      <% if can? :update, @product_variant %>
        <%= link_to "Edit", edit_product_product_variant_path(@product, @product_variant),
            class: "inline-flex min-h-[30px] items-center justify-center rounded-md bg-accent px-2.5 py-1 text-sm font-semibold text-[color:var(--color-page)] hover:bg-[var(--color-accent-hover)]",
            data: { turbo_prefetch: true } %>
      <% end %>
    </div>
  <% end %>

  <div class="mt-2 grid grid-cols-1 gap-2 lg:grid-cols-2">
    <%# ── Row 1: Details + Images or Pricing ─────────────────────── %>

    <section class="overflow-hidden rounded-lg border border-theme bg-surface" aria-labelledby="variant-details-heading">
      <div class="border-b border-theme bg-surface-alt px-3 py-1.5">
        <h2 id="variant-details-heading" class="text-sm font-semibold text-body">Details</h2>
        <p class="text-xs text-muted">SKU and identification</p>
      </div>
      <dl class="divide-y divide-[var(--color-border)]">
        <div class="px-3 py-1.5 sm:grid sm:grid-cols-3 sm:gap-3">
          <dt class="text-xs font-medium text-muted">Code</dt>
          <dd class="mt-0.5 text-sm text-body sm:col-span-2 sm:mt-0"><%= @product_variant.code %></dd>
        </div>
        <div class="px-3 py-1.5 sm:grid sm:grid-cols-3 sm:gap-3">
          <dt class="text-xs font-medium text-muted">Name</dt>
          <dd class="mt-0.5 text-sm text-body sm:col-span-2 sm:mt-0"><%= @product_variant.name.presence || "—" %></dd>
        </div>
        <div class="px-3 py-1.5 sm:grid sm:grid-cols-3 sm:gap-3">
          <dt class="text-xs font-medium text-muted">Product</dt>
          <dd class="mt-0.5 text-sm text-body sm:col-span-2 sm:mt-0"><%= link_to @product.name, product_path(@product), class: "text-accent hover:underline", data: { turbo_prefetch: true } %></dd>
        </div>
      </dl>
    </section>

    <section class="overflow-hidden rounded-lg border border-theme bg-surface" aria-labelledby="variant-pricing-heading">
      <div class="border-b border-theme bg-surface-alt px-3 py-1.5">
        <h2 id="variant-pricing-heading" class="text-sm font-semibold text-body">Pricing</h2>
        <p class="text-xs text-muted">Cost and selling prices</p>
      </div>
      <dl class="divide-y divide-[var(--color-border)]">
        <div class="px-3 py-1.5 sm:grid sm:grid-cols-3 sm:gap-3">
          <dt class="text-xs font-medium text-muted">Selling price</dt>
          <dd class="mt-0.5 text-sm text-body sm:col-span-2 sm:mt-0"><%= number_to_currency(@product_variant.selling_price) || "—" %></dd>
        </div>
        <div class="px-3 py-1.5 sm:grid sm:grid-cols-3 sm:gap-3">
          <dt class="text-xs font-medium text-muted">Purchase price</dt>
          <dd class="mt-0.5 text-sm text-body sm:col-span-2 sm:mt-0"><%= number_to_currency(@product_variant.purchase_price) || "—" %></dd>
        </div>
        <div class="px-3 py-1.5 sm:grid sm:grid-cols-3 sm:gap-3">
          <dt class="text-xs font-medium text-muted">Unit cost</dt>
          <dd class="mt-0.5 text-sm text-body sm:col-span-2 sm:mt-0"><%= number_to_currency(@product_variant.unit_cost) || "—" %></dd>
        </div>
      </dl>
    </section>

    <%# ── Row 2: Inventory + Supplier ────────────────────────────── %>

    <section class="overflow-hidden rounded-lg border border-theme bg-surface" aria-labelledby="variant-inventory-heading">
      <div class="border-b border-theme bg-surface-alt px-3 py-1.5">
        <h2 id="variant-inventory-heading" class="text-sm font-semibold text-body">Inventory</h2>
        <p class="text-xs text-muted">Stock levels and ordering</p>
      </div>
      <dl class="divide-y divide-[var(--color-border)]">
        <div class="px-3 py-1.5 sm:grid sm:grid-cols-3 sm:gap-3">
          <dt class="text-xs font-medium text-muted">Stock level</dt>
          <dd class="mt-0.5 text-sm text-body sm:col-span-2 sm:mt-0"><%= @product_variant.stock_level || "—" %></dd>
        </div>
        <div class="px-3 py-1.5 sm:grid sm:grid-cols-3 sm:gap-3">
          <dt class="text-xs font-medium text-muted">Reorder level</dt>
          <dd class="mt-0.5 text-sm text-body sm:col-span-2 sm:mt-0"><%= @product_variant.reorder_level || "—" %></dd>
        </div>
        <div class="px-3 py-1.5 sm:grid sm:grid-cols-3 sm:gap-3">
          <dt class="text-xs font-medium text-muted">Items per unit</dt>
          <dd class="mt-0.5 text-sm text-body sm:col-span-2 sm:mt-0"><%= @product_variant.items_per_unit || "—" %></dd>
        </div>
        <div class="px-3 py-1.5 sm:grid sm:grid-cols-3 sm:gap-3">
          <dt class="text-xs font-medium text-muted">Order quantity</dt>
          <dd class="mt-0.5 text-sm text-body sm:col-span-2 sm:mt-0"><%= @product_variant.order_quantity || "—" %></dd>
        </div>
      </dl>
    </section>

    <section class="overflow-hidden rounded-lg border border-theme bg-surface" aria-labelledby="variant-supplier-heading">
      <div class="border-b border-theme bg-surface-alt px-3 py-1.5">
        <h2 id="variant-supplier-heading" class="text-sm font-semibold text-body">Supplier</h2>
        <p class="text-xs text-muted">Procurement details</p>
      </div>
      <dl class="divide-y divide-[var(--color-border)]">
        <div class="px-3 py-1.5 sm:grid sm:grid-cols-3 sm:gap-3">
          <dt class="text-xs font-medium text-muted">Supplier</dt>
          <dd class="mt-0.5 text-sm text-body sm:col-span-2 sm:mt-0"><%= @product_variant.supplier&.name || @product.supplier&.name || "—" %></dd>
        </div>
        <div class="px-3 py-1.5 sm:grid sm:grid-cols-3 sm:gap-3">
          <dt class="text-xs font-medium text-muted">Supplier reference</dt>
          <dd class="mt-0.5 text-sm text-body sm:col-span-2 sm:mt-0"><%= @product_variant.supplier_reference.presence || "—" %></dd>
        </div>
      </dl>
    </section>

    <%# ── Row 3: Notes + Record info ─────────────────────────────── %>

    <section class="overflow-hidden rounded-lg border border-theme bg-surface" aria-labelledby="variant-notes-heading">
      <div class="border-b border-theme bg-surface-alt px-3 py-1.5">
        <h2 id="variant-notes-heading" class="text-sm font-semibold text-body">Notes</h2>
        <p class="text-xs text-muted">Internal notes and reference</p>
      </div>
      <dl class="divide-y divide-[var(--color-border)]">
        <div class="px-3 py-1.5">
          <dd class="text-sm text-body"><%= @product_variant.notes.present? ? simple_format(@product_variant.notes) : "—" %></dd>
        </div>
      </dl>
    </section>

    <section class="overflow-hidden rounded-lg border border-theme bg-surface" aria-labelledby="variant-meta-heading">
      <div class="border-b border-theme bg-surface-alt px-3 py-1.5">
        <h2 id="variant-meta-heading" class="text-sm font-semibold text-body">Record info</h2>
        <p class="text-xs text-muted">Timestamps</p>
      </div>
      <dl class="divide-y divide-[var(--color-border)]">
        <div class="px-3 py-1.5 sm:grid sm:grid-cols-3 sm:gap-3">
          <dt class="text-xs font-medium text-muted">Created</dt>
          <dd class="mt-0.5 text-sm text-body sm:col-span-2 sm:mt-0"><%= local_time(@product_variant.created_at, format: :long) %></dd>
        </div>
        <div class="px-3 py-1.5 sm:grid sm:grid-cols-3 sm:gap-3">
          <dt class="text-xs font-medium text-muted">Last updated</dt>
          <dd class="mt-0.5 text-sm text-body sm:col-span-2 sm:mt-0"><%= local_time(@product_variant.updated_at, format: :long) %></dd>
        </div>
      </dl>
    </section>

    <%# ── Full-width: Images ─────────────────────────────────────── %>

    <% if @product_variant.images.attached? %>
      <section class="overflow-hidden rounded-lg border border-theme bg-surface lg:col-span-2" aria-labelledby="variant-images-heading">
        <div class="border-b border-theme bg-surface-alt px-3 py-1.5">
          <h2 id="variant-images-heading" class="text-sm font-semibold text-body">Images</h2>
          <p class="text-xs text-muted"><%= pluralize(@product_variant.images.count, "image") %> attached</p>
        </div>
        <div class="flex flex-wrap gap-2 px-3 py-2">
          <% @product_variant.images.each do |image| %>
            <%= link_to url_for(image), target: "_blank", rel: "noopener" do %>
              <%= image_tag image.representation(resize_to_limit: [ 160, 160 ]),
                  class: "h-[160px] w-[160px] rounded-md border border-theme object-cover bg-surface-alt hover:opacity-80 transition-opacity" %>
            <% end %>
          <% end %>
        </div>
      </section>
    <% end %>
  </div>

  <%# ── Full-width: Audit trail ────────────────────────────────── %>
  <%= render "shared/audit_trail", auditable: @product_variant %>
</div>
