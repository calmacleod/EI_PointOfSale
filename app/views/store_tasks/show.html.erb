<% content_for :title, @store_task.title %>
<% content_for :breadcrumbs do %>
  <li><%= link_to "Dashboard", root_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li><%= link_to "Store Tasks", store_tasks_path, class: "font-medium text-body hover:text-accent" %></li>
  <li><span aria-hidden="true">›</span></li>
  <li aria-current="page" class="text-muted"><%= @store_task.title %></li>
<% end %>

<div>
  <%= render "shared/page_header", title: @store_task.title do %>
    <div class="flex items-center gap-1.5">
      <%= link_to "Back to tasks", store_tasks_path,
          class: "inline-flex min-h-[30px] items-center justify-center rounded-md border border-theme bg-surface px-2.5 py-1 text-sm font-semibold text-body hover:bg-[var(--color-border)]/30",
          data: { turbo_prefetch: true } %>
      <%= link_to "Edit", edit_store_task_path(@store_task),
          class: "inline-flex min-h-[30px] items-center justify-center rounded-md bg-accent px-2.5 py-1 text-sm font-semibold text-[color:var(--color-page)] hover:bg-[var(--color-accent-hover)]",
          data: { turbo_prefetch: true } %>
    </div>
  <% end %>

  <div class="mt-2 grid grid-cols-1 gap-2 lg:grid-cols-2">
    <section class="overflow-hidden rounded-lg border border-theme bg-surface" aria-labelledby="task-details-heading">
      <div class="border-b border-theme bg-surface-alt px-3 py-1.5">
        <h2 id="task-details-heading" class="text-sm font-semibold text-body">Details</h2>
      </div>
      <dl class="divide-y divide-[var(--color-border)]">
        <div class="px-3 py-1.5 sm:grid sm:grid-cols-3 sm:gap-3">
          <dt class="text-xs font-medium text-muted">Title</dt>
          <dd class="mt-0.5 text-sm text-body sm:col-span-2 sm:mt-0"><%= @store_task.title %></dd>
        </div>
        <div class="px-3 py-1.5 sm:grid sm:grid-cols-3 sm:gap-3">
          <dt class="text-xs font-medium text-muted">Status</dt>
          <dd class="mt-0.5 text-sm text-body sm:col-span-2 sm:mt-0">
            <% variant = case @store_task.status
                         when "not_started" then :neutral
                         when "in_progress" then :info
                         when "blocked" then :warning
                         when "done" then :success
                         end %>
            <%= status_chip(@store_task.status_label, variant) %>
            <% if @store_task.overdue? %>
              <%= status_chip("Overdue", :error) %>
            <% end %>
          </dd>
        </div>
        <div class="px-3 py-1.5 sm:grid sm:grid-cols-3 sm:gap-3">
          <dt class="text-xs font-medium text-muted">Assigned To</dt>
          <dd class="mt-0.5 text-sm text-body sm:col-span-2 sm:mt-0"><%= @store_task.assigned_to&.name || "—" %></dd>
        </div>
        <div class="px-3 py-1.5 sm:grid sm:grid-cols-3 sm:gap-3">
          <dt class="text-xs font-medium text-muted">Due Date</dt>
          <dd class="mt-0.5 text-sm text-body sm:col-span-2 sm:mt-0"><%= @store_task.due_date ? l(@store_task.due_date, format: :long) : "—" %></dd>
        </div>
        <% if @store_task.body.present? %>
          <div class="px-3 py-1.5">
            <dt class="text-xs font-medium text-muted">Description</dt>
            <dd class="mt-1 text-sm text-body whitespace-pre-wrap"><%= @store_task.body %></dd>
          </div>
        <% end %>
      </dl>
    </section>

    <section class="overflow-hidden rounded-lg border border-theme bg-surface self-start" aria-labelledby="task-meta-heading">
      <div class="border-b border-theme bg-surface-alt px-3 py-1.5">
        <h2 id="task-meta-heading" class="text-sm font-semibold text-body">Record info</h2>
        <p class="text-xs text-muted">Timestamps</p>
      </div>
      <dl class="divide-y divide-[var(--color-border)]">
        <div class="px-3 py-1.5 sm:grid sm:grid-cols-3 sm:gap-3">
          <dt class="text-xs font-medium text-muted">Created</dt>
          <dd class="mt-0.5 text-sm text-body sm:col-span-2 sm:mt-0"><%= local_time(@store_task.created_at, format: :long) %></dd>
        </div>
        <div class="px-3 py-1.5 sm:grid sm:grid-cols-3 sm:gap-3">
          <dt class="text-xs font-medium text-muted">Last updated</dt>
          <dd class="mt-0.5 text-sm text-body sm:col-span-2 sm:mt-0"><%= local_time(@store_task.updated_at, format: :long) %></dd>
        </div>
      </dl>
    </section>
  </div>

  <%= render "shared/audit_trail", auditable: @store_task %>
</div>
